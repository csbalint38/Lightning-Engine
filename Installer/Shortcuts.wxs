<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui"
	 xmlns:util="http://wixtoolset.org/schemas/v4/wxs/util">
  <Fragment>
	<Property Id="ADD_TO_ENV" Secure="yes" />
	<Property Id="CREATE_DESKTOP_SHORTCUT" Secure="yes" Value="1"/>
	<Property Id="STARTMENU_ICON" Secure="yes" />
	<UI>
	  <DialogRef Id="CancelDlg"/>
	  <Dialog Id="ShortcutsDlg" Width="370" Height="270" Title="Installation Options">
		<Control Id="Title"
				 Type="Text"
				 X="15"
				 Y="6"
				 Width="200"
				 Height="15"
				 Transparent="yes"
				 NoPrefix="yes"
				 Text="{\WixUI_Font_Title}!(loc.ShortcutsDlgTitle)"/>
		<Control Id="Description"
				 Type="Text"
				 X="25"
				 Y="23"
				 Width="340"
				 Height="15"
				 Transparent="yes"
				 NoPrefix="yes"
				 Text="{\WixUI_Font_Normal}!(loc.ShortcutsDlgDescription)" />
		<Control Id="BannerBitmap"
				 Type="Bitmap"
				 X="0"
				 Y="0"
				 Width="370"
				 Height="44"
				 TabSkip="no"
				 Text="!(loc.BrowseDlgBannerBitmap)" />
		<Control Id="AddToEnv"
				 Type="CheckBox"
				 X="20"
				 Y="70"
				 Width="330"
				 Height="17"
				 Property="ADD_TO_ENV"
				 CheckBoxValue="1"
				 Text="Create environment variable (Recommended)"/>
		<Control Id="CreateDesktopShortcut"
				 Type="CheckBox"
				 X="20"
				 Y="90"
				 Width="330"
				 Height="17"
				 Property="CREATE_DESKTOP_SHORTCUT"
				 CheckBoxValue="1"
				 Text="Create Desktop shortcut"/>
		<Control Id="AddStartMenuShortcut"
				 Type="CheckBox"
				 X="20"
				 Y="110"
				 Width="340"
				 Height="17"
				 Property="STARTMENU_ICON"
				 CheckBoxValue="1"
				 Text="Add shortcut to Start menu"/>
		<Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
		<Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="!(loc.WixUINext)" />
		<Control Id="Cancel"
				 Type="PushButton"
				 X="304"
				 Y="243"
				 Width="56"
				 Height="17"
				 Cancel="yes"
				 Text="!(loc.WixUICancel)" >
		  <Publish Event="SpawnDialog" Value="CancelDlg" />
		</Control>
      </Dialog>
	</UI>
  </Fragment>
</Wix>
