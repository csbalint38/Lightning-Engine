<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows10.0.19041.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
	<XamlDebuggingInformation>True</XamlDebuggingInformation>
	<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <Platforms>x64</Platforms>
    <Configurations>DebugEditor;ReleaseEditor</Configurations>
	<InformationalVersion>0.3.14-beta</InformationalVersion>
	<FileVersion>0.3.14.0</FileVersion>
	<AssemblyVersion>0.3.14</AssemblyVersion>
	<ApplicationIcon>Resources\Icon.ico</ApplicationIcon>
	<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='DebugEditor|x64'">
	<OutputPath>..\x64\DebugEditor\</OutputPath>
	<PlatformTarget>x64</PlatformTarget>
	<DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ReleaseEditor|x64'">
	<PlatformTarget>x64</PlatformTarget>
	<OutputPath>..\x64\ReleaseEditor\</OutputPath>
	<Optimize>True</Optimize>
  </PropertyGroup>
	
  <ItemGroup>
    <PackageReference Include="envdte" Version="17.14.40260" />
    <PackageReference Include="envdte80" Version="17.14.40260" />
    <PackageReference Include="MaterialDesignThemes.MahApps" Version="5.3.0" />
    <PackageReference Include="Microsoft.Build" Version="17.14.28" />
    <PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
  </ItemGroup>
	
  <ItemGroup>
    <Content Include="Resources\CodeTemplates\Legacy\cpp.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\CodeTemplates\Legacy\h.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\CodeTemplates\Module\cpp.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\CodeTemplates\Module\ixx.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Icon.ico" />
    <Resource Include="Resources\CubeTexture.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\FolderBig.png" />
    <Resource Include="Resources\FolderSmall.png" />
    <Resource Include="Resources\MaterialEditor\DefaultMaterialShaders.hlsl" />
    <Resource Include="Resources\PlaneTexture.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\SphereUvChecker.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\TextureEditor\ChannelSelect.cso" />
    <Resource Include="Resources\TextureEditor\Checkerboard.png" />
  </ItemGroup>

	<ItemGroup>
		<Content Include="Resources\ProjectTemplates\**" Link=".\Resources\ProjectTemplates\%(RecursiveDir)%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
		<Content Include="Resources\DefaultAssets\**" Link=".\Resources\DefaultAssets\%(RecursiveDir)%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\CodeTemplates\Legacy\cpp.txt" />
	  <None Remove="Resources\CodeTemplates\Legacy\h.txt" />
	  <None Remove="Resources\CodeTemplates\Module\cpp.txt" />
	  <None Remove="Resources\CodeTemplates\Module\cppm.txt" />
	  <None Remove="Resources\CodeTemplates\Module\ixx.txt" />
	  <None Remove="Resources\CubeTexture.png" />
	</ItemGroup>
</Project>
