<UserControl x:Class="Editor.GameProject.OpenProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.GameProject"
             mc:Ignorable="d"
             Width="860"
             Height="480"
             d:DesignHeight="480" d:DesignWidth="860">
    <UserControl.DataContext>
        <local:OpenProject/>
    </UserControl.DataContext>
    <StackPanel Background="AliceBlue">
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
            <ListBox x:Name="LbProjects"
                     Width="500"
                     Height="300"
                     ItemsSource="{Binding Projects}"
                     SelectedIndex="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <EventSetter Event="MouseDoubleClick"
                                     Handler="ListBoxItem_MouseDoubleClick"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Icon}"
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding ProjectName}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Width="350"
                    Height="300"
                    Margin="10, 0, 0, 0">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Path=SelectedItem.Screenshot, ElementName=LbProjects}"/>
                </Border.Background>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0, 30, 0, 0">
            <Button x:Name="BtnOpen" 
                    Content="Open"
                    Width="100"
                    Height="30"
                    IsDefault="True"
                    Click="BtnOpen_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
