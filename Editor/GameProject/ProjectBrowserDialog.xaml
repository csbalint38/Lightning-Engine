<Window x:Class="Editor.GameProject.ProjectBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Project Browser"
        Height="600"
        Width="900"
        Style="{StaticResource LightningDialogStyle}">
    <Grid Margin="20, 20, 20, 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Name="BtnToggleOpenNew"
                    Style="{StaticResource AccentButton}"
                    Content="New Project"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Width="100"
                    Height="30"
                    Margin="10 0 0 10"
                    Click="BtnToggleOpenNew_Click"/>
        </StackPanel>
        <Border x:Name="BrdContent" Grid.Row="1">
            <local:OpenProjectView/>
        </Border>
    </Grid>
</Window>
