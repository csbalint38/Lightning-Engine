<UserControl x:Class="Editor.GameProject.NewProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.GameProject"
             mc:Ignorable="d" 
             Width="860"
             Height="480"
             d:DataContext="{d:DesignInstance Type=local:NewProject, IsDesignTimeCreatable=True}"
             d:DesignHeight="480" d:DesignWidth="860">
    <UserControl.DataContext>
        <local:NewProject/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Background="AliceBlue">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <ListBox x:Name="LbTemplates" 
                         Width="300"
                         Height="300"
                         SelectedIndex="0"
                         ItemsSource="{Binding Templates}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Icon}"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ProjectType}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border Width="550"
                        Height="300"
                        Margin="10, 0, 0, 0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Path=SelectedItem.Screenshot, ElementName=LbTemplates}"/>
                    </Border.Background>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0, 30, 0, 0">
                <TextBlock Text="Project Name:"
                           Width="80"/>
                <TextBox Width="300"
                         Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0, 30, 0, 0">
                <TextBlock Text="Location:"
                           Width="80"/>
                <TextBox Width="250"
                         Text="{Binding ProjectPath, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Browse"
                        Width="50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0, 30, 0, 0">
                <Button Content="Create"
                        x:Name="BtnCreate"
                        Width="100"
                        Height="30"
                        IsDefault="True"
                        IsEnabled="{Binding IsValid}"
                        Click="BtnCreate_Click"/>
            </StackPanel>
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0, 0, 0, 0"/>
        </StackPanel>
    </Grid>
</UserControl>
