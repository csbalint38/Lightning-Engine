<UserControl x:Class="Editor.Config.CodeConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Editor.Config"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:Editor.Utilities.Converters"
             xmlns:enums="clr-namespace:Editor.Common.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="CodeEditorValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:CodeEditor"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <converters:ShoutingSnakeCaseToTitleCaseConverter x:Key="snakeToTitle"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:CodeConfig/>
    </UserControl.DataContext>
    <Grid Background="{StaticResource Editor.BackgroundBrush2}"
          Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Code Editor"
                   Foreground="{StaticResource Editor.FontBrush}"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"/>
        <ComboBox Grid.Column="1"
                  VerticalAlignment="Stretch"
                  Margin="5"
                  Style="{StaticResource ComboBoxFlatStyle}"
                  ItemsSource="{Binding Source={StaticResource snakeToTitle}}"
                  SelectedItem="{Binding CodeEditor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource snakeToTitle}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
