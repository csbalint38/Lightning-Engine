<UserControl x:Class="Editor.Editors.TextureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             xmlns:enum="clr-namespace:Editor.Common.Enums"
             xmlns:converter="clr-namespace:Editor.Utilities.Converters"
             xmlns:opt="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:TextureEditor}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="#1f242d">
        <Grid ClipToBounds="True"
              x:Name="GrdBackground"
              MouseLeftButtonDown="GrdBackground_MouseLeftButtonDown"
              MouseLeftButtonUp="GrdBackground_MouseLeftButtonUp"
              MouseWheel="GrdBackground_MouseWheel"
              PreviewMouseMove="GrdBackground_PreviewMouseMove">
            <Grid.Background>
                <VisualBrush TileMode="Tile"
                             Viewport="0,0,200,200"
                             ViewportUnits="Absolute"
                             Visual="{StaticResource TiledGridBackground}"
                             opt:Freeze="True"/>
            </Grid.Background>
            <Grid.LayoutTransform>
                <ScaleTransform />
            </Grid.LayoutTransform>
            <Canvas IsHitTestVisible="False">
                <Border x:Name="imageBorder">
                    <Border.Background>
                        <ImageBrush x:Name="textureBackground"
                                    TileMode="Tile"
                                    Viewport="0,0,64,64"
                                    ViewportUnits="Absolute"
                                    ImageSource="/Resources/TextureEditor/Checkerboard.png"/>
                    </Border.Background>
                    <Border.Resources>
                        <converter:ReciprocalConverter x:Key="reciprocalConverter"/>
                        <converter:ArrayIndexToCubemapConverter x:Key="arrayIndexToCubemapConverter"/>
                        <local:ChannelSelectEffect x:Key="channelSelectEffect"
                                                   Channels="{Binding Channels}"
                                                   Stride="{Binding Stride}"/>
                        <Image x:Key="singleImageView"
                               Source="{Binding SelectedSliceBitmap}"
                               Effect="{StaticResource channelSelectEffect}"/>
                        <Style TargetType="{x:Type Grid}"
                               x:Key="gridStyle">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ArrayIndex, Converter={StaticResource arrayIndexToCubemapConverter}, NotifyOnTargetUpdated=True}"
                                             Value="0">
                                    <Setter Property="Grid.Row"
                                            Value="1"/>
                                    <Setter Property="Grid.Column"
                                            Value="2"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ArrayIndex, Converter={StaticResource arrayIndexToCubemapConverter}, NotifyOnTargetUpdated=True}"
                                             Value="1">
                                    <Setter Property="Grid.Row"
                                            Value="1"/>
                                    <Setter Property="Grid.Column"
                                            Value="0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ArrayIndex, Converter={StaticResource arrayIndexToCubemapConverter}, NotifyOnTargetUpdated=True}"
                                             Value="2">
                                    <Setter Property="Grid.Row"
                                            Value="0"/>
                                    <Setter Property="Grid.Column"
                                            Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ArrayIndex, Converter={StaticResource arrayIndexToCubemapConverter}, NotifyOnTargetUpdated=True}"
                                             Value="3">
                                    <Setter Property="Grid.Row"
                                            Value="2"/>
                                    <Setter Property="Grid.Column"
                                            Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ArrayIndex, Converter={StaticResource arrayIndexToCubemapConverter}, NotifyOnTargetUpdated=True}"
                                             Value="4">
                                    <Setter Property="Grid.Row"
                                            Value="1"/>
                                    <Setter Property="Grid.Column"
                                            Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ArrayIndex, Converter={StaticResource arrayIndexToCubemapConverter}, NotifyOnTargetUpdated=True}"
                                             Value="5">
                                    <Setter Property="Grid.Row"
                                            Value="1"/>
                                    <Setter Property="Grid.Column"
                                            Value="3"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                        <Grid x:Key="cubemapView">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Cubemap.PositiveX}"
                                   Grid.Row="1"
                                   Grid.Column="2"
                                   Effect="{StaticResource channelSelectEffect}"/>
                            <Image Source="{Binding Cubemap.NegativeX}"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Effect="{StaticResource channelSelectEffect}"/>
                            <Image Source="{Binding Cubemap.PositiveY}"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Effect="{StaticResource channelSelectEffect}"/>
                            <Image Source="{Binding Cubemap.NegativeY}"
                                   Grid.Row="2"
                                   Grid.Column="1"
                                   Effect="{StaticResource channelSelectEffect}"/>
                            <Image Source="{Binding Cubemap.PositiveZ}"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Effect="{StaticResource channelSelectEffect}"/>
                            <Image Source="{Binding Cubemap.NegativeZ}"
                                   Grid.Row="1"
                                   Grid.Column="3"
                                   Effect="{StaticResource channelSelectEffect}"/>
                        </Grid>
                        <DataTemplate DataType="{x:Type local:TextureEditor}">
                            <Grid>
                                <ContentPresenter Content="{StaticResource singleImageView}"
                                                  x:Name="singleImagePresenter"/>
                                <ContentPresenter Content="{StaticResource cubemapView}"
                                                  x:Name="cubemapPresenter"
                                                  Visibility="Collapsed"/>
                            </Grid>
                            <DataTemplate.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Texture.IsCubeMap}"
                                                   Value="True"/>
                                        <Condition Binding="{Binding ViewAsCubemap}"
                                                   Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility"
                                            TargetName="singleImagePresenter"
                                            Value="Collapsed"/>
                                    <Setter Property="Visibility"
                                            TargetName="cubemapPresenter"
                                            Value="Visible"/>
                                </MultiDataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </Border.Resources>
                    <ContentPresenter x:Name="textureImage"
                                      Content="{Binding}" />
                </Border>
            </Canvas>
        </Grid>
        <Border x:Name="zoomLabel"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#50000000"
                CornerRadius="5"
                IsHitTestVisible="False"
                Opacity="0"
                d:Opacity="1">
            <TextBlock Text="{Binding Path=ScaleFactor, RelativeSource={RelativeSource AncestorType={x:Type local:TextureView}}, StringFormat=ZOOM {0:p0}}"
                       d:Text="ZOOM 50%"
                       Margin="10,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="Bahnschrift condensed"
                       FontSize="32"
                       Foreground="#FFC800"/>
        </Border>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                d:Visibility="Visible"
                Background="#50000000"
                CornerRadius="5"
                IsHitTestVisible="False">
            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Visibility"
                            Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding State}"
                                     Value="{x:Static enum:AssetEditorState.DONE}">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:2"/>
                                        <ObjectAnimationUsingKeyFrames BeginTime="0:0:0"
                                                                       Duration="0:0:2"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:2"
                                                                    Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.1"/>
                                        <ObjectAnimationUsingKeyFrames BeginTime="0:0:0"
                                                                       Duration="0:0:0.1"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.1"
                                                                    Value="{x:Static Visibility.Visible}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Margin="10,5"
                       FontFamily="Bahnschrift condensed"
                       FontSize="32"
                       Foreground="#FFC800"
                       d:Text="LOADING...">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding State}"
                                         Value="{x:Static enum:AssetEditorState.DONE}">
                                <Setter Property="Text"
                                        Value="DONE"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding State}"
                                         Value="{x:Static enum:AssetEditorState.IMPORTING}">
                                <Setter Property="Text"
                                        Value="IMPORTING..."/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding State}"
                                         Value="{x:Static enum:AssetEditorState.LOADING}">
                                <Setter Property="Text"
                                        Value="LOADING..."/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding State}"
                                         Value="{x:Static enum:AssetEditorState.PROCESSING}">
                                <Setter Property="Text"
                                        Value="PROCESSING..."/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding State}"
                                         Value="{x:Static enum:AssetEditorState.SAVING}">
                                <Setter Property="Text"
                                        Value="SAVING..."/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation AutoReverse="True"
                                                 RepeatBehavior="Forever"
                                                 Storyboard.TargetProperty="Opacity"
                                                 From="1"
                                                 To="0"
                                                 Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
