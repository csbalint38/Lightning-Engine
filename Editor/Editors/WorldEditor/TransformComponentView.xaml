<UserControl x:Class="Editor.Editors.TransformComponentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             xmlns:controls="clr-namespace:Editor.Common.Controls"
             xmlns:vm="clr-namespace:Editor.Components"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:MSTransform}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}"
               BasedOn="{StaticResource LightTextBlockStyle}"/>
    </UserControl.Resources>
    <controls:ComponentView Header="TRANSFORM" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="78" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Position"
                       Grid.Column="0"
                       Grid.Row="0"/>
            <controls:VectorBox Grid.Column="1"
                                X="{Binding PosX}"
                                Y="{Binding PosY}"
                                Z="{Binding PosZ}"
                                Margin="0,0,0,5"
                                LostKeyboardFocus="VbPosition_LostKeyboardFocus"
                                PreviewMouseLeftButtonDown="VbPosition_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="VbPosition_PreviewMouseLeftButtonUp"/>
            <TextBlock Text="Rotation"
                       Grid.Column="0"
                       Grid.Row="1" />
            <controls:VectorBox Grid.Row="1"
                                Grid.Column="1"
                                X="{Binding RotX}"
                                Y="{Binding RotY}"
                                Z="{Binding RotZ}"
                                Margin="0,0,0,5"
                                LostKeyboardFocus="VbRotation_LostKeyboardFocus"
                                PreviewMouseLeftButtonDown="VbRotation_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="VbRotation_PreviewMouseLeftButtonUp"/>
            <TextBlock Text="Scale"
                       Grid.Column="0"
                       Grid.Row="2" />
            <controls:VectorBox Grid.Row="2"
                                Grid.Column="1"
                                X="{Binding ScaleX}"
                                Y="{Binding ScaleY}"
                                Z="{Binding ScaleZ}"
                                Margin="0,0,0,5"
                                LostKeyboardFocus="VbScale_LostKeyboardFocus"
                                PreviewMouseLeftButtonDown="VbScale_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="VbScale_PreviewMouseLeftButtonUp"/>
        </Grid>
    </controls:ComponentView>
</UserControl>
