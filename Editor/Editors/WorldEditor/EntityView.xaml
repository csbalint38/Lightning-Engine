<UserControl x:Class="Editor.Editors.EntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             xmlns:vm="clr-namespace:Editor.Components"
             xmlns:util="clr-namespace:Editor.Utilities"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MSEntity, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <util:NullableBoolToBool x:Key="nullableBoolToBool"/>
        <DataTemplate DataType="{x:Type vm:MSTransform}">
            <local:TransformView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MSScript}">
            <local:ScriptView/>
        </DataTemplate>
        <ContextMenu x:Key="addComponentMenu"
                     IsOpen="{Binding Path=IsChecked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ToggleButton}}}">
            <MenuItem Header="Geometry"/>
            <MenuItem Header="Physics">
                <MenuItem Header="Rigidbody"/>
            </MenuItem>
            <MenuItem x:Name="MIScriptComponent"
                      Header="Script"
                      ItemsSource="{Binding SelectedEntities[0].ParentScene.Project.AvailableScripts}">
                <MenuItem.Style>
                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Padding" Value="5,3,2,3" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedEntities[0].ParentScene.Project.AvailableScripts}"
                                         Value="{x:Null}">
                                <Setter Property="IsEnabled"
                                        Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Padding"
                                Value="5,3,2,3"/>
                        <Setter Property="Header"
                                Value="{Binding}"/>
                        <EventSetter Event="Click"
                                     Handler="MIScriptComponent_Click" />
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
        </ContextMenu>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalAlignment="Stretch"
                  Background="{StaticResource Editor.BackgroundBrush2}"
                  Margin="5,5,0,5">
        <ScrollViewer.Style>
            <Style TargetType="ScrollViewer">
                <Style.Triggers>
                    <Trigger Property="DataContext"
                             Value="{x:Null}">
                        <Setter Property="Visibility"
                                Value="Collapsed"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ScrollViewer.Style>
        <StackPanel VerticalAlignment="Top"
                    Margin="5,5,5,5">
            <Border Height="32">
                <ToggleButton x:Name="TgbAddComponent"
                              Style="{StaticResource ToggelButtonBase}"
                              PreviewMouseLeftButtonDown="TgbAddComponent_PreviewMouseLeftButtonDown"
                              IsEnabled="{Binding IsEnabled, Converter={StaticResource nullableBoolToBool}}">
                    <ToggleButton.Content>
                        <DockPanel Margin="10,2,5,0">
                            <TextBlock Text="Add Component"
                                       HorizontalAlignment="Center"
                                       FontWeight="DemiBold"/>
                            <materialDesign:PackIcon Kind="MenuDown"
                                                     Width="18"
                                                     Height="18"
                                                     HorizontalAlignment="Center"
                                                     Margin="5,0,0,0"/>
                        </DockPanel>
                    </ToggleButton.Content>
                </ToggleButton>
            </Border>
            <Grid SnapsToDevicePixels="True"
                  Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="TbName"
                         Grid.Column="0"
                         Text="{Binding Name}"
                         IsEnabled="{Binding IsEnabled, Converter={StaticResource nullableBoolToBool}}"
                         GotKeyboardFocus="TbName_GotKeyboardFocus"
                         LostKeyboardFocus="TbName_LostKeyboardFocus"
                         Margin="0,0,15,0"/>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Enabled"
                               Foreground="{StaticResource Editor.FontBrush}"
                               SnapsToDevicePixels="True"/>
                    <CheckBox x:Name="ChBIsEnabled"
                              Margin="5,0,5,0"
                              Background="{StaticResource Editor.BackgroundBrush1}"
                              BorderBrush="{StaticResource Editor.BackgroundBrush4}"
                              BorderThickness="2"
                              Foreground="{StaticResource Editor.FontBrush}"
                              IsChecked="{Binding IsEnabled, Mode=OneWay}"
                              Click="ChBIsEnabled_Click"/>
                </StackPanel>
            </Grid>
            <ItemsControl ItemsSource="{Binding Components}"
                          SnapsToDevicePixels="True"
                          IsEnabled="{Binding IsEnabled, Converter={StaticResource nullableBoolToBool}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
        <ScrollViewer.Effect>
            <DropShadowEffect Opacity=".6"
                  BlurRadius="15"
                  ShadowDepth="2"/>
        </ScrollViewer.Effect>
    </ScrollViewer>
</UserControl>
