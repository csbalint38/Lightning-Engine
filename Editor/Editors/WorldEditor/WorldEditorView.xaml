<UserControl x:Class="Editor.Editors.WorldEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             xmlns:common="clr-namespace:Editor.Common"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Focusable="True"
             mc:Ignorable="d"
             Background="AliceBlue"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding UndoCommand}"
                    Key="Z"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding RedoCommand}"
                    Key="Y"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding SaveCommand}"
                    Key="S"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding BuildCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F7" />
        <KeyBinding Command="{Binding BuildCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="B"
                    Modifiers="Ctrl+Shift"/>
        <KeyBinding Command="{Binding DebugStartCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F5" />
        <KeyBinding Command="{Binding DebugStartWithoutDebuggingCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F5"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding DebugStopCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F5"
                    Modifiers="Shift"/>
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding UndoCommand}">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Undo"
                                             Width="24"
                                             Height="24"
                                             Margin="5,0,5,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding RedoCommand}">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Redo"
                                             Width="24"
                                             Height="24"
                                             Margin="5,0,5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="BtnNewScript"
                    Click="BtnNewScript_Click"
                    IsEnabled="{Binding Path=IsEnabled, ElementName=BtnBuild}">
                <StackPanel>
                    <materialDesign:PackIcon Kind="FileDocument"
                                             Width="24"
                                             Height="24"
                                             Margin="5,0,5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="BtnBuild"
                    Command="{Binding BuildCommand}"
                    CommandParameter="{StaticResource True}">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Build"
                                             Width="24"
                                             Height="24"
                                             Margin="5,0,5,0"/>
                </StackPanel>
            </Button>
            <ComboBox x:Name="buildConfig"
                      VerticalAlignment="Center"
                      Width="72"
                      SelectedIndex="{Binding BuildConfiguration}">
                <ComboBoxItem Content="Debug" />
                <ComboBoxItem Content="Release" />
            </ComboBox>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1"
                          Height="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"/>
                <TabControl Grid.Row="1">
                    <TabItem Header="History">
                        <local:UndoRedoView DataContext="{Binding UndoRedo}"/>
                    </TabItem>
                    <TabItem Header="Console">
                        <common:LoggerView/>
                    </TabItem>
                </TabControl>
            </Grid>
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Left"
                           VerticalAlignment="Stretch"/>
            <Grid Grid.Column="1" MinWidth="250">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1"
                          Height="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"/>
                <local:ScenesView/>
                <local:EntityView Grid.Row="1"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
