<UserControl x:Class="Editor.Editors.WorldEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             xmlns:common="clr-namespace:Editor.Common"
             xmlns:content="clr-namespace:Editor.Content"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:gameproject="clr-namespace:Editor.GameProject"
             xmlns:controls="clr-namespace:Editor.Common.Controls"
             d:DataContext="{d:DesignInstance Type=gameproject:Project}"
             Focusable="True"
             mc:Ignorable="d"
             Background="AliceBlue"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </UserControl.Resources>
    <UserControl.CommandBindings>
        <CommandBinding x:Name="MINewProject"
                        Command="ApplicationCommands.New"
                        Executed="MINewProject_Executed"/>
        <CommandBinding x:Name="MIOpenProject"
                        Command="ApplicationCommands.Open"
                        Executed="MIOpenProject_Executed"/>
        <CommandBinding x:Name="MIExit"
                        Command="ApplicationCommands.Close"
                        Executed="MIExit_Executed"/>
    </UserControl.CommandBindings>
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding UndoCommand}"
                    Key="Z"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding RedoCommand}"
                    Key="Y"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding SaveCommand}"
                    Key="S"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding BuildCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F7" />
        <KeyBinding Command="{Binding BuildCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="B"
                    Modifiers="Ctrl+Shift"/>
        <KeyBinding Command="{Binding DebugStartCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F5" />
        <KeyBinding Command="{Binding DebugStartWithoutDebuggingCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F5"
                    Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding DebugStopCommand}"
                    CommandParameter="{StaticResource True}"
                    Key="F5"
                    Modifiers="Shift"/>
    </UserControl.InputBindings>
    <Grid Background="{StaticResource Editor.BackgroundBrush5}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New Project"
                          Command="ApplicationCommands.New"/>
                <MenuItem Header="Open Project"
                          Command="ApplicationCommands.Open"/>
                <Separator/>
                <MenuItem Header="Save Project"
                          Command="{Binding SaveCommand}"/>
                <Separator/>
                <MenuItem Header="Exit"
                          Command="ApplicationCommands.Close"/>
            </MenuItem>
            <MenuItem Header="View"/>
            <MenuItem Header="Window"/>
        </Menu>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Background="{StaticResource Editor.BackgroundBrush2}">
            <Button Command="{Binding UndoCommand}"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <Button.Content>
                    <materialDesign:PackIcon Kind="ArrowULeftTop"
                                             Width="16"
                                             Height="16"
                                             Margin="3"/>
                </Button.Content>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Undo<LineBreak/>Ctrl+Z
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <Button Command="{Binding RedoCommand}"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <materialDesign:PackIcon Kind="ArrowURightTop"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Redo<LineBreak/>Ctrl+Y
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <Button Command="{Binding SaveCommand}"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <materialDesign:PackIcon Kind="ContentSave"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Save<LineBreak/>Ctrl+S
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <Border Width="1"
                    Margin="3,0,3,0"
                    Background="#80FFFFFF"
                    Height="22"
                    VerticalAlignment="Stretch"/>
            <Button x:Name="BtnNewScript"
                    Click="BtnNewScript_Click"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    IsEnabled="{Binding Path=IsEnabled, ElementName=BtnBuild}"
                    ToolTip="New Script"
                    ToolTipService.InitialShowDelay="1000">
                <materialDesign:PackIcon Kind="FilePlus"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
            </Button>
            <Button x:Name="BtnBuild"
                    Command="{Binding BuildCommand}"
                    CommandParameter="{StaticResource True}"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <materialDesign:PackIcon Kind="Build"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Build<LineBreak/>F7<LineBreak/>Ctrl+Shift+B
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <ComboBox x:Name="buildConfig"
                      VerticalAlignment="Center"
                      Width="78"
                      BorderThickness="1"
                      Style="{StaticResource ComboBoxFlatStyle}"
                      SelectedIndex="{Binding BuildConfiguration}">
                <ComboBoxItem Content="Debug"
                              HorizontalAlignment="Stretch"/>
                <ComboBoxItem Content="Release"
                              HorizontalAlignment="Stretch"/>
            </ComboBox>
            <Button x:Name="BtnStart"
                    Command="{Binding DebugStartCommand}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <materialDesign:PackIcon Kind="Play"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
                <Button.Style>
                    <Style TargetType="{x:Type Button}"
                           BasedOn="{StaticResource IconButtonWithHover}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="True">
                                <Setter Property="Foreground"
                                        Value="{StaticResource Editor.GreenBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Start<LineBreak/>F5
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnStartWithoutDebugging"
                    Command="{Binding DebugStartWithoutDebuggingCommand}"
                    CommandParameter="{StaticResource True}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <materialDesign:PackIcon Kind="PlayOutline"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
                <Button.Style>
                    <Style TargetType="{x:Type Button}"
                           BasedOn="{StaticResource IconButtonWithHover}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="True">
                                <Setter Property="Foreground"
                                        Value="{StaticResource Editor.GreenBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Build<LineBreak/>F7<LineBreak/>Ctrl+Shift+B
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <Button x:Name="BtnStop"
                    Command="{Binding DebugStopCommand}"
                    CommandParameter="{StaticResource True}"
                    Margin="3"
                    ToolTipService.InitialShowDelay="500">
                <materialDesign:PackIcon Kind="Stop"
                                         Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
                <Button.Style>
                    <Style TargetType="{x:Type Button}"
                           BasedOn="{StaticResource IconButtonWithHover}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="True">
                                <Setter Property="Foreground"
                                        Value="{StaticResource Editor.RedBrush}"/>
                            </Trigger>
                        </Style.Triggers>                        
                    </Style>
                </Button.Style>
                <Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        Build<LineBreak/>F7<LineBreak/>Ctrl+Shift+B
                    </TextBlock>
                </Button.ToolTip>
            </Button>
            <Border Width="1"
                    Margin="3,0,3,0"
                    Background="#80FFFFFF"
                    Height="22"
                    VerticalAlignment="Stretch"/>
            <Button x:Name="BtnPrimitiveMesh"
                    Click="BtnPrimitiveMesh_Click"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    IsEnabled="{Binding Path=IsEnabled, ElementName=BtnBuild}"
                    ToolTip="New primitive mesh"
                    ToolTipService.InitialShowDelay="1000">
                <materialDesign:PackIcon Kind="CubeOutline"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
            </Button>
            <Button x:Name="BtnImport"
                    Click="BtnImport_Click"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    ToolTip="Import"
                    ToolTipService.InitialShowDelay="1000">
                <materialDesign:PackIcon Kind="Import"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
            </Button>
            <Border Width="1"
                    Margin="3,0,3,0"
                    Background="#80FFFFFF"
                    Height="22"
                    VerticalAlignment="Stretch"/>
            <Button x:Name="BtnBugReport"
                    Click="BtnBugReport_Click"
                    Style="{StaticResource IconButtonWithHover}"
                    Margin="3"
                    IsEnabled="{Binding Path=IsEnabled, ElementName=BtnBuild}"
                    ToolTip="Bug reporter"
                    ToolTipService.InitialShowDelay="1000">
                <materialDesign:PackIcon Kind="BugOutline"
                                         Foreground="{StaticResource Editor.SecretBrush}"
                                         Width="16"
                                         Height="16"
                                         Margin="3"/>
            </Button>
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top"
                              Background="Transparent"/>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Row="0"
                                  Grid.RowSpan="2"
                                  Grid.Column="0"
                                  Background="Transparent"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Right"
                                  Width="5"/>
                    <GridSplitter Grid.Row="1"
                                  Grid.ColumnSpan="2"
                                  Grid.Column="0"
                                  Background="Transparent"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Stretch"
                                  Height="5"/>
                    <local:RenderSurfaceView Margin="0,0,5,0"/>
                    <local:RenderSurfaceView Grid.Column="1"
                                             Margin="0,0,0,0"/>
                    <local:RenderSurfaceView Grid.Row="1"
                                             Margin="0,5,5,0"/>
                    <local:RenderSurfaceView Grid.Column="1"
                                             Grid.Row="1"
                                             Margin="0,5,0,0"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <content:ContentBrowserView AllowImport="True"
                                                AllowDrop="True"
                                                Margin="0,5,5,0"
                                                x:Name="contentBrowserView"
                                                Loaded="ContentBrowserView_Loaded"
                                                IsVisibleChanged="ContentBrowserView_IsVisibleChanged"/>
                    <GridSplitter Grid.Row="1"
                                  Background="Transparent"
                                  Width="5"/>
                    <TabControl Grid.Column="1"
                                Margin="0,5,0,0">
                        <TabItem Header="History">
                            <local:UndoRedoView DataContext="{Binding UndoRedo}"/>
                        </TabItem>
                        <TabItem Header="Console">
                            <common:LoggerView/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>
            <Grid Grid.Column="1" MinWidth="250">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top"
                              Background="Transparent"/>
                <local:ScenesView/>
                <local:EntityView Grid.Row="1"
                                  Margin="0,5,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
