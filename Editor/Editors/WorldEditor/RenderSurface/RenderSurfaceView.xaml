<UserControl x:Class="Editor.Editors.RenderSurfaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Editor.Editors.WorldEditor.RenderSurface"
             mc:Ignorable="d" 
             UseLayoutRounding="True"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}"
               BasedOn="{StaticResource LightTextBlockStyle}" />
    </UserControl.Resources>
    <Border BorderThickness="2" d:BorderBrush="pink">
        <Border.Style>
            <Style TargetType="{x:Type Border}">
                <Setter Property="BorderBrush"
                        Value="Transparent"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsFocused, ElementName=renderSurfaceControl}"
                                 Value="True">
                        <Setter Property="BorderBrush"
                                Value="{StaticResource Editor.SecretBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <local:RenderSurfaceControl x:Name="renderSurfaceControl"
                                        Grid.Row="1"
                                        x:FieldModifier="private"/>
            <Border Background="{StaticResource Editor.BackgroundBrush2}"
                    BorderThickness="0,0,0,2"
                    BorderBrush="{StaticResource Editor.BackgroundBrush3}">
                <Grid Margin="10, 1">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="Delta time: "/>
                        <TextBlock x:Name="TbFrameTime"
                                   Text=" -- ms"
                                   Foreground="{StaticResource Editor.LightningBrush}"/>
                        <TextBlock Text="|"
                                   Margin="10, 0"/>
                        <TextBlock Text="FPS: "/>
                        <TextBlock x:Name="TbFrameRate"
                                   Text=" -- Hz"
                                   Foreground="{StaticResource Editor.LightningBrush}"/>
                    </StackPanel>
                    <ToggleButton Padding="2"
                                  x:Name="TgBtnCameraSettings"
                                  HorizontalAlignment="Right"
                                  IsChecked="{Binding IsOpen, ElementName=PpCameraSettings, Mode=OneWay}"
                                  Click="TgBtnCameraSettings_Click"
                                  Focusable="False"
                                  Style="{StaticResource IconToggleButtonOutlined}"
                                  VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Video"
                                                 Width="16"
                                                 Height="16"
                                                 Margin="3"/>
                    </ToggleButton>
                </Grid>
            </Border>
            <Popup x:Name="PpCameraSettings"
                   AllowsTransparency="True"
                   PopupAnimation="Fade"
                   DataContext="{Binding ElementName=renderSurfaceControl}"
                   PlacementTarget="{Binding ElementName=TgBtnCameraSettings}"
                   Placement="Bottom"
                   StaysOpen="False"
                   HorizontalOffset="-220"
                   VerticalOffset="5">
                <Border CornerRadius="5"
                        ClipToBounds="True"
                        Width="250"
                        BorderBrush="{StaticResource Editor.BackgroundBrush5}"
                        BorderThickness="1">
                    <Border.Background>
                        <SolidColorBrush Color="{StaticResource Editor.Background3}"
                                         Opacity="0.8" />
                    </Border.Background>
                    <StackPanel Margin="10">
                        <TextBox Text="Camera Settings"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,10"
                                 FontWeight="Bold"/>
                        <CheckBox Content="Lock Camera"
                                  IsChecked="{Binding IsXZLocked}"
                                  Foreground="{StaticResource Editor.FontBrush}" />
                        <DockPanel>
                            <TextBlock Text="Camera Speed"
                                       Width="90"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding CameraSpeed}"
                                       Width="32"
                                       Margin="0,5"/>
                            <Slider Minimum="1"
                                    Maximum="10"
                                    VerticalAlignment="Center"
                                    Value="{Binding CameraSpeed}"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="Camera FoV"
                                       Width="90"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding CameraFoV, StringFormat=F1}"
                                       Width="32"
                                       Margin="0,5"/>
                            <Slider Minimum="0.01"
                                    Maximum="180"
                                    VerticalAlignment="Center"
                                    Value="{Binding CameraFoV}"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="Camera Near Z"
                                       Width="90"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding CameraNearZ, StringFormat=F1}"
                                       Width="32"
                                       Margin="0,5"/>
                            <Slider Minimum="0.001"
                                    Maximum="{Binding CameraFarZ}"
                                    VerticalAlignment="Center"
                                    Value="{Binding CameraNearZ}"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="Camera Far Z"
                                       Width="90"
                                       Margin="0,5"/>
                            <TextBlock Text="{Binding CameraFarZ, StringFormat=F1}"
                                       Width="32"
                                       Margin="0,5"/>
                            <Slider Minimum="{Binding CameraNearZ}"
                                    Maximum="10000"
                                    VerticalAlignment="Center"
                                    Value="{Binding CameraFarZ}"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</UserControl>
