<UserControl x:Class="Editor.Editors.GeometryEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:GeometryEditor}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:GeometryEditor/>
    </UserControl.DataContext>
    <DockPanel>
        <Border Height="32"
                DockPanel.Dock="Top"
                VerticalAlignment="Top"
                Margin="0,0,0,1">
            <StackPanel Orientation="Horizontal"
                        Margin="5,2">
                <TextBlock Text="LOD:"
                           Margin="0,0,0,5"/>
                <Slider Width="128"
                        VerticalAlignment="Center"
                        x:Name="SldLOD"
                        Value="{Binding LODIndex}"
                        Minimum="0"
                        Maximum="{Binding MaxLODIndex}"
                        Interval="1"
                        IsSnapToTickEnabled="True"
                        TickPlacement="BottomRight">
                    <Slider.Style>
                        <Style TargetType="{x:Type Slider}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MaxLODIndex}"
                                             Value="0">
                                    <Setter Property="IsEnabled"
                                            Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AutoLOD}"
                                             Value="true">
                                    <Setter Property="IsEnabled"
                                            Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Slider.Style>
                </Slider>
                    <TextBox Width="32"
                             Text="{Binding Path=Value, ElementName=SldLOD}"
                             IsEnabled="{Binding Path=IsEnabled, ElementName=SldLOD}"/>
                <TextBlock Text="Auto LOD"
                           Margin="15,0,5,0"/>
                <CheckBox IsChecked="{Binding AutoLOD}"
                          VerticalAlignment="Center" />
            </StackPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="250"
                                  MaxWidth="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GridSplitter HorizontalAlignment="Right"
                          Width="5"
                          VerticalAlignment="Stretch"/>
            <local:GeometryView DataContext="{Binding MeshRenderer}"
                                Grid.Column="1"
                                x:Name="geometryView" />
            <StackPanel Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        IsHitTestVisible="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding MeshRenderer.CameraPosition.X, StringFormat=F5}"
                               Foreground="Red"/>
                    <TextBlock Text="{Binding MeshRenderer.CameraPosition.Y, StringFormat=F5}"
                               Margin="10,0"
                               Foreground="Green"/>
                    <TextBlock Text="{Binding MeshRenderer.CameraPosition.Z, StringFormat=F5}"
                               Foreground="Blue"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding MeshRenderer.Meshes[0].Positions.Count}"
                               Foreground="Orange"/>
                    <TextBlock Text="{Binding MeshRenderer.Meshes[0].Indices.Count}"
                               Margin="10,0"
                               Foreground="Orange"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
