<UserControl x:Class="Editor.Editors.GeometryDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Editors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:GeometryEditor}"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="{StaticResource Editor.BackgroundBrush2}">
            <Expander Header="Active LOD"
                      Foreground="{StaticResource Editor.FontBrush}"
                      Background="{StaticResource Editor.BackgroundBrush3}"
                      IsExpanded="True"
                      Margin="5">
                <ItemsControl ItemsSource="{Binding MeshRenderer.Meshes}"
                              AlternationCount="{Binding MeshRenderer.Meshes.Count}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel>
                                <StackPanel.Effect>
                                    <DropShadowEffect Opacity=".6"
                                                      BlurRadius="15"
                                                      ShadowDepth="2"/>
                                </StackPanel.Effect>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,1,0,0">
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="Background"
                                                Value="{StaticResource Editor.BackgroundBrush4}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="{StaticResource Editor.BackgroundBrush4}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid Margin="5,0" Height="96">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource Mode=TemplatedParent}, StringFormat=Submesh {0}}"/>
                                        <TextBlock Text="{Binding Name}" Margin="5,0,0,0" />
                                    </StackPanel>
                                    <StackPanel VerticalAlignment="Center"
                                                HorizontalAlignment="Left">
                                        <CheckBox x:Name="CbHighlight" 
                                                  Click="CbHighlight_Click"
                                                  IsChecked="{Binding IsHighlighted, Mode=OneWay}"
                                                  Margin="5,0,0,5">
                                            <Run Text="Highlight"
                                                 Foreground="{StaticResource Editor.FontBrush}"/>
                                        </CheckBox>
                                        <CheckBox x:Name="CbIsolate" 
                                                  Click="CbIsolate_Click"
                                                  Margin="5,0,0,0"
                                                  IsChecked="{Binding IsIsolated, Mode=OneWay}">
                                            <Run Text="Isolate"
                                                 Foreground="{StaticResource Editor.FontBrush}"/>
                                        </CheckBox>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Expander.Effect>
                    <DropShadowEffect Opacity=".6"
                                      BlurRadius="15"
                                      ShadowDepth="2"/>
                </Expander.Effect>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
