    <Style TargetType="{x:Type controls:ComponentView}" x:Key="{x:Type controls:ComponentView}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ComponentView}">
                    <Expander IsExpanded="True" x:Name="expander" Background="{StaticResource Editor.BackgroundBrush3}">
                        <Expander.Style>
                            <Style TargetType="{x:Type Expander}">
                                <Setter Property="Foreground" Value="{StaticResource Editor.FontBrush}" />
                            </Style>
                        </Expander.Style>
                        <Expander.Header>
                            <TextBlock FontWeight="Bold"
                                       Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Expander.Header>
                        <ContentPresenter Margin="5" />
                        <Expander.Effect>
                            <DropShadowEffect Opacity=".6" BlurRadius="15" ShadowDepth="2"/>
                        </Expander.Effect>
                    </Expander>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
