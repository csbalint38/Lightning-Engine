<ResourceDictionary x:Class="Editor.Dictionaries.ControlTemplates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:opt="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:Double x:Key="AssetIconWidth">90</sys:Double>
    <Style TargetType="{x:Type TextBlock}" x:Key="LightTextBlockStyle">
        <Setter Property="Foreground" Value="{StaticResource Editor.FontBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style TargetType="{x:Type TextBox}" x:Key="TextBoxStyle">
        <Setter Property="Foreground" Value="{StaticResource Editor.FontBrush}"/>
        <Setter Property="Background" Value="{StaticResource Editor.BackgroundBrush1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Editor.BackgroundBrush5}"/>
        <Setter Property="SelectionBrush" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="0,2"/>
    </Style>
    <Style TargetType="{x:Type TextBox}" x:Key="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
        <EventSetter Event="KeyDown" Handler="TextBox_KeyDown"/>
    </Style>
    <Style x:Key="FlatButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource Editor.BackgroundBrush3}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Editor.BackgroundBrush5}"/>
        <Setter Property="Foreground" Value="{StaticResource Editor.FontBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="contentPresenter"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{StaticResource Editor.BackgroundBrush5}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RoundedFlatButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource Editor.BackgroundBrush2}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Editor.BackgroundBrush5}"/>
        <Setter Property="Foreground" Value="{StaticResource Editor.FontBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="15">
                        <ContentPresenter x:Name="contentPresenter"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        <Border.Effect>
                            <DropShadowEffect Opacity=".6" BlurRadius="15" ShadowDepth="2"/>
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{StaticResource Editor.BackgroundBrush4}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="AccentButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource Editor.LightningBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Editor.LightningBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource Editor.BackgroundBrush1}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="15">
                        <ContentPresenter x:Name="contentPresenter"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="#FFD633"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource Editor.Lightning}"
                                  Opacity=".7"
                                  BlurRadius="15"
                                  ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="LightningWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="BorderBrush" Value="{StaticResource Editor.BlueBrush}"/>
        <Setter Property="Background" Value="{StaticResource Editor.BackgroundBrush1}"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CornerRadius="0"
                              ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}"
                              CaptionHeight="20"
                              NonClientFrameEdges="None"
                              UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=WindowState}"
                                                 Value="Maximized">
                                        <Setter Property="BorderThickness"
                                                Value="{Binding Source={x:Static SystemParameters.WindowResizeBorderThickness}}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <AdornerDecorator>
                                <ContentPresenter Margin="5,24,5,5"/>
                            </AdornerDecorator>
                            <DockPanel VerticalAlignment="Top" LastChildFill="False" Margin="5,0,5,0">
                                <DockPanel.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource FlatButton}">
                                        <Setter Property="Width" Value="24"/>
                                        <Setter Property="Height" Value="18"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Setter Property="DockPanel.Dock" Value="Right"/>
                                        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                                    </Style>
                                </DockPanel.Resources>
                                <TextBlock Margin="5,2,0,0"
                                           VerticalAlignment="Center"
                                           DockPanel.Dock="Left"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource Editor.FontBrush}"
                                           Text="{TemplateBinding Title}"/>
                                <Button x:Name="BtnClose" Click="BtnClose_Click" Margin="3,3,0,0">
                                    <Button.Content>
                                        <Grid>
                                            <Path Data="M1,2.5L 8,9.5"
                                                  Margin="0"
                                                  Stroke="{StaticResource Editor.RedBrush}"/>
                                            <Path Data="M1,9.5L 8,2.5"
                                                  Margin="0"
                                                  Stroke="{StaticResource Editor.RedBrush}"/>
                                        </Grid>
                                    </Button.Content>
                                </Button>
                                <Button x:Name="BtnMaximize" Click="BtnMaximize_Click" Margin="3,3,0,0">
                                    <Button.Content>
                                        <Rectangle Stroke="{StaticResource Editor.FontBrush}"
                                                   StrokeThickness="1"
                                                   Width="8"
                                                   Height="8"
                                                   Margin="0,1,0,0"/>
                                    </Button.Content>
                                </Button>
                                <Button x:Name="BtnMinimize" Click="BtnMinimize_Click" Margin="0,3,0,0">
                                    <Button.Content>
                                        <Rectangle Stroke="{StaticResource Editor.FontBrush}"
                                                   StrokeThickness="1"
                                                   Width="10"
                                                   Height="1"
                                                   Margin="0,5,0,0"/>
                                    </Button.Content>
                                </Button>
                            </DockPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="LightningDialogStyle" TargetType="{x:Type Window}">
        <Setter Property="BorderBrush" Value="{StaticResource Editor.BlueBrush}"/>
        <Setter Property="Background" Value="{StaticResource Editor.BackgroundBrush1}"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CornerRadius="0"
                              ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}"
                              CaptionHeight="20"
                              NonClientFrameEdges="None"
                              UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=WindowState}"
                                                 Value="Maximized">
                                        <Setter Property="BorderThickness"
                                                Value="{Binding Source={x:Static SystemParameters.WindowResizeBorderThickness}}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <AdornerDecorator>
                                <ContentPresenter Margin="5,24,5,5"/>
                            </AdornerDecorator>
                            <DockPanel VerticalAlignment="Top" LastChildFill="False" Margin="5,0,5,0">
                                <DockPanel.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource FlatButton}">
                                        <Setter Property="Width" Value="24"/>
                                        <Setter Property="Height" Value="18"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                                        <Setter Property="DockPanel.Dock" Value="Right"/>
                                        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                                    </Style>
                                </DockPanel.Resources>
                                <TextBlock Margin="5,2,0,0"
                                           VerticalAlignment="Center"
                                           DockPanel.Dock="Left"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource Editor.FontBrush}"
                                           Text="{TemplateBinding Title}"/>
                                <Button x:Name="BtnClose" Click="BtnClose_Click" Margin="3,3,0,0">
                                    <Button.Content>
                                        <Grid>
                                            <Path Data="M1,2.5L 8,9.5"
                                                  Margin="0"
                                                  Stroke="{StaticResource Editor.RedBrush}"/>
                                            <Path Data="M1,9.5L 8,2.5"
                                                  Margin="0"
                                                  Stroke="{StaticResource Editor.RedBrush}"/>
                                        </Grid>
                                    </Button.Content>
                                </Button>
                            </DockPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Canvas Opacity="0.2" x:Key="TiledGridBackground">
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="10" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="30" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="50" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="70" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="90" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="10" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="30" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="50" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="70" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="90" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.1"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="20" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="40" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="60" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="0" Y1="0" Y2="100" Canvas.Left="80" Canvas.Top="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="20" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="40" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="60" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Line X1="0" X2="100" Y1="0" Y2="0" Canvas.Top="80" Canvas.Left="0" Stroke="#FFC800" StrokeThickness="0.2"/>
        <Rectangle Fill="Transparent" Stroke="#FFC800" StrokeThickness="0.3" Width="100" Height="100"/>
    </Canvas>
</ResourceDictionary>