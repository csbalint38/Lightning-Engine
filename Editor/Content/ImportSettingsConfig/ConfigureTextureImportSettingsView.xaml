<UserControl x:Class="Editor.Content.ImportSettingsConfig.ConfigureTextureImportSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Content.ImportSettingsConfig"
             xmlns:converters="clr-namespace:Editor.Utilities.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type local:ConfigureImportSettings}}"
             d:DesignHeight="900" d:DesignWidth="800">
    <UserControl.Resources>
        <AlternationConverter x:Key="alternationConverter">
            <SolidColorBrush Color="Transparent"/>
            <SolidColorBrush Color="{StaticResource Editor.Background2}"/>
        </AlternationConverter>
        <converters:DataSizeToStringConverter x:Key="dataSizeToStringConverter"/>
        <Style TargetType="{x:Type ListBoxItem}"
               x:Key="alternateColorListBoxItemStyle"
                BasedOn="{StaticResource ListBoxItemStyle}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}"/>
            <Setter Property="Background"
                    Value="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource Self}, Converter={StaticResource alternationConverter}}"/>
        </Style>
        <DataTemplate x:Key="imageSourceListBoxItemTemplate">
            <Grid ToolTip="{Binding FileInfo.DirectoryName}"
                  ToolTipService.InitialShowDelay="500"
                  Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, StringFormat='{}{0}. '}"/>
                <TextBlock Text="{Binding FileInfo.Name}"
                           Foreground="{StaticResource Editor.LightningBrush}"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,5,0"
                           Grid.Column="1"/>
                <TextBlock Text="{Binding FileInfo.LastWriteTime}"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"/>
                <TextBlock Text="{Binding FileInfo.Length, Converter={StaticResource dataSizeToStringConverter}}"
                           Grid.Row="2"
                           Grid.ColumnSpan="2"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid d:DataContext="{d:DesignInstance Type={x:Type local:TextureImportSettingsConfigurator}}"
          DataContext="{Binding TextureImportSettingsConfigurator}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="250"/>
            <ColumnDefinition MinWidth="300"/>
            <ColumnDefinition MinWidth="250"
                              Width="250"/>
        </Grid.ColumnDefinitions>
        <Border Margin="0,0,5,0"
                Background="{StaticResource Editor.BackgroundBrush2}">
            <DockPanel Margin="10"
                       Background="{StaticResource Editor.BackgroundBrush2}">
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <Button Padding="16,4,16,4"
                            Margin="0,5"
                            VerticalAlignment="Center"
                            Focusable="False"
                            HorizontalAlignment="Center"
                            Click="BtnImport_Click"
                            IsEnabled="{Binding TextureProxies.Count}"
                            Style="{StaticResource AccentButton}">
                        <Button.Content>
                            <TextBlock Text="Import"
                                       FontWeight="DemiBold"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <ListBox ItemsSource="{Binding TextureProxies}"
                         AlternationCount="{Binding TextureProxies.Count}"
                         SelectionMode="Extended"
                         x:Name="LBTexture"
                         HorizontalContentAlignment="Stretch"
                         BorderBrush="{StaticResource Editor.LightningBrush}"
                         SelectedIndex="0"
                         AllowDrop="True"
                         Drop="LBTexture_Drop"
                         ItemContainerStyle="{StaticResource alternateColorListBoxItemStyle}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.Triggers>
                        <EventTrigger RoutedEvent="PreviewDragEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                        From="0"
                                                        To="2"
                                                        Duration="0:0:0.2"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        From="0"
                                                        To="-2"
                                                        Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewDragLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                        From="2"
                                                        To="0"
                                                        Duration="0:0:0.2"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        From="-2"
                                                        To="0"
                                                        Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Drop">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                        From="2"
                                                        To="0"
                                                        Duration="0:0:0.2"/>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        From="-2"
                                                        To="0"
                                                        Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ListBox.Triggers>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ToolTip="{Binding FileInfo.DirectoryName}"
                                  ToolTipService.InitialShowDelay="500"
                                  Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Background="{StaticResource Editor.GreenBrush}"
                                        Width="5"
                                        Margin="0,0,5,0"
                                        x:Name="BrdHasImages"
                                        Grid.Row="0"
                                        Grid.RowSpan="4">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Sources.Count}"
                                                             Value="1">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>    
                                </Border>
                                <TextBlock Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, StringFormat='{}{0}. '}"
                                           Grid.Column="1"/>
                                <TextBlock Text="{Binding FileInfo.Name}"
                                           Foreground="{StaticResource Editor.LightningBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,20,0"
                                           Grid.Column="2"/>
                                <TextBlock Text="{Binding FileInfo.LastWriteTime}"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           Grid.ColumnSpan="2"/>
                                <TextBlock Text="{Binding FileInfo.Length, Converter={StaticResource dataSizeToStringConverter}}"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           Grid.ColumnSpan="2"/>
                                <Expander Visibility="{Binding Path=Visibility, ElementName=BrdHasImages}"
                                          Focusable="False"
                                          Margin="0,5,0,0"
                                          Grid.Row="3"
                                          Grid.Column="2"
                                          Grid.ColumnSpan="2">
                                    <Expander.Header>
                                        <TextBlock Text="SOURCE IMAGES"
                                                   FontWeight="Bold"
                                                   Style="{StaticResource LightTextBlockStyle}"/>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Sources}"
                                                  Margin="23,5,0,10">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FileInfo.Name}"
                                                           Foreground="{StaticResource Editor.LightningBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,20,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                                <Button x:Name="BtnRemove"
                                        Grid.Column="3"
                                        Grid.RowSpan="2"
                                        Margin="0,-8,3,0"
                                        Click="BtnRemove_Click"
                                        Style="{StaticResource IconButton}"
                                        Focusable="False"
                                        Visibility="Collapsed">
                                    <Button.Content>
                                        <materialDesign:PackIcon Kind="CancelCircleOutline"
                                                                 Width="20"
                                                                 Height="20"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Visibility"
                                            TargetName="BtnRemove"
                                            Value="Visible"/>
                                </Trigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
        <TextBlock FontFamily="Bahnschrift condensed"
                   FontSize="24"
                   Text="Drop Files Here"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Name="TBDrop"
                   IsHitTestVisible="False"
                   d:Visibility="Visible">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=Items.Count, ElementName=LBTexture}"
                                     Value="0">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <GridSplitter HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Width="5"
                      Background="Transparent"/>
        <Border Grid.Column="1"
                x:Name="border"
                Margin="0,0,5,0">
            <Grid d:DataContext="{d:DesignInstance Type={x:Type local:TextureProxy}}"
                  Background="{StaticResource Editor.BackgroundBrush2}"
                  d:Visibility="Visible"
                  DataContext="{Binding Path=SelectedItem, ElementName=LBTexture}">
                <Grid.Style>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <Trigger Property="DataContext"
                                     Value="{x:Null}">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding FileInfo.Name, StringFormat='Import settings for {0}'}"
                           Foreground="{StaticResource Editor.FontBrush}"
                           TextTrimming="CharacterEllipsis"
                           d:Text="Import settings for model.fbx"
                           FontSize="16"
                           Margin="10"/>
                <local:TextureImportSettingsView Grid.Row="1"
                                                 Margin="10,0,10,28"
                                                 DataContext="{Binding ImportSettings}"/>
                <Border Grid.Row="1"
                        CornerRadius="5"
                        BorderThickness="1"
                        Background="#50000000"
                        Margin="5,-5,5,23"
                        x:Name="BrdLock"
                        ToolTipService.InitialShowDelay="100"
                        ToolTip="Import settings are locked when multiple sources are selected. &#13;Current settings can be applied to the selection.">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=SelectedItems.Count, ElementName=LBTexture}"
                                             Value="1">
                                    <Setter Property="Visibility"
                                            Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <materialDesign:PackIcon Kind="LockOutline"
                                             HorizontalAlignment="Right"
                                             Margin="5"
                                             Width="25"
                                             Height="25"
                                             Foreground="{StaticResource Editor.LightningBrush}"
                                             ToolTip="Mixed settings"/>
                </Border>
                <StackPanel Grid.Row="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10,0">
                    <Button Content="Apply to selection"
                            Width="120"
                            x:Name="BtnApplyToSelection"
                            Style="{StaticResource FlatButton}"
                            Click="BtnApplyToSelection_Click"
                            Visibility="{Binding Path=Visibility, ElementName=BrdLock}">
                    </Button>
                    <Button Content="Apply to all"
                            Width="120"
                            x:Name="BtnApplyToAll"
                            Style="{StaticResource FlatButton}"
                            Click="BtnApplyToAll_Click"
                            Margin="0,8"/>
                    <Button Content="Set as Default"
                            Style="{StaticResource FlatButton}"
                            Width="120"/>
                </StackPanel>
                <local:ChangeDestinationFolderView Grid.Row="3"
                                                   Margin="10,20,10,10"
                                                   VerticalAlignment="Top"/>
                <Grid Grid.Row="4"
                      Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="SOURCE IMAGES"
                                   Foreground="{StaticResource Editor.FontBrush}"
                                   FontWeight="Bold"
                                   Margin="2,3,0,10">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                        <Button Margin="0,0,5,5"
                                Padding="0"
                                Width="15"
                                x:Name="BtnAddImageSource"
                                Click="BtnAddImageSource_Click"
                                ToolTip="Add selected images to image source list."
                                Focusable="False">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource IconButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedItems.Count, ElementName=LBTexture}"
                                                     Value="1">
                                            <Setter Property="IsEnabled"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Content>
                                <materialDesign:PackIcon Kind="ChevronRight"/>
                            </Button.Content>
                        </Button>
                        <Button Margin="0,0,5,5"
                                Padding="0"
                                Width="15"
                                x:Name="BtnRemoveImageSource"
                                Click="BtnRemoveImageSource_Click"
                                ToolTip="Remove selected images from image source list."
                                Focusable="False">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource IconButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedItems.Count, ElementName=LBImageSources}"
                                                     Value="0">
                                            <Setter Property="IsEnabled"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Content>
                                <materialDesign:PackIcon Kind="ChevronLeft"/>
                            </Button.Content>
                        </Button>
                        <RepeatButton Margin="0,0,5,5"
                                      Padding="0"
                                      Width="15"
                                      x:Name="BtnMoveUp"
                                      Click="BtnMoveUp_Click"
                                      ToolTip="Move up selected image sources."
                                      Focusable="False">
                            <RepeatButton.Style>
                                <Style TargetType="{x:Type RepeatButton}"
                                       BasedOn="{StaticResource RepeatIconButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedItems.Count, ElementName=LBImageSources}"
                                                     Value="0">
                                            <Setter Property="IsEnabled"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RepeatButton.Style>
                            <RepeatButton.Content>
                                <materialDesign:PackIcon Kind="ChevronUp"/>
                            </RepeatButton.Content>
                        </RepeatButton>
                        <RepeatButton Margin="0,0,5,5"
                                      Padding="0"
                                      Width="15"
                                      x:Name="BtnMoveDown"
                                      Click="BtnMoveDown_Click"
                                      ToolTip="Move down selected image sources."
                                      Focusable="False">
                            <RepeatButton.Style>
                                <Style TargetType="{x:Type RepeatButton}"
                                       BasedOn="{StaticResource RepeatIconButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedItems.Count, ElementName=LBImageSources}"
                                                     Value="0">
                                            <Setter Property="IsEnabled"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RepeatButton.Style>
                            <RepeatButton.Content>
                                <materialDesign:PackIcon Kind="ChevronDown"/>
                            </RepeatButton.Content>
                        </RepeatButton>
                    </StackPanel>
                    <ListBox Grid.Column="1"
                             ItemsSource="{Binding Sources}"
                             AlternationCount="{Binding Sources.Count}"
                             SelectionMode="Extended"
                             x:Name="LBImageSources"
                             HorizontalAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectedIndex="0"
                             ItemContainerStyle="{StaticResource alternateColorListBoxItemStyle}"
                             ItemTemplate="{StaticResource imageSourceListBoxItemTemplate}">
                    </ListBox>
                </Grid>
            </Grid>
        </Border>
        <GridSplitter Grid.Column="1"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Stretch"
                  Width="5"
                  Background="Transparent"/>
        <Grid Grid.Column="2"
          Background="{StaticResource Editor.BackgroundBrush2}">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Style.Triggers>
                        <Trigger Property="DataContext"
                             Value="{x:Null}">
                            <Setter Property="Visibility"
                                Value="Collapsed"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <DockPanel Margin="10">
                <TextBlock Text="Imported files"
                       Foreground="{StaticResource Editor.FontBrush}"
                       DockPanel.Dock="Top"
                       FontSize="16"/>
                <local:ImportingItemsView Margin="0,10,0,0"/>
            </DockPanel>
            <Button Content="Clear"
                Style="{StaticResource FlatButton}"
                Background="{StaticResource Editor.BackgroundBrush4}"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Padding="10,2,10,2"
                Margin="10"
                x:Name="BtnClear"
                Click="BtnClear_Click"/>
        </Grid>
    </Grid>
</UserControl>
