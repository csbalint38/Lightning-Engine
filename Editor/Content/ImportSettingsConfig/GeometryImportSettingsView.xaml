<UserControl x:Class="Editor.Content.ImportSettingsConfig.GeometryImportSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Content.ImportSettingsConfig"
             xmlns:content="clr-namespace:Editor.Content"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type content:GeometryImportSettings}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="7" VerticalAlignment="Top">
        <DockPanel VerticalAlignment="Center">
            <TextBlock Text="Normals" Width="150"/>
            <ComboBox x:Name="CBNormal"
                      SelectedIndex="{Binding CalculateNormals}">
                <ComboBoxItem Content="Import"/>
                <ComboBoxItem Content="Calculate"/>
            </ComboBox>
        </DockPanel>
        <DockPanel VerticalAlignment="Center">
            <TextBlock Text="Tangents" Width="150"/>
            <ComboBox x:Name="CBTangent"
                      SelectedIndex="{Binding CalculateTangents}">
                <ComboBoxItem Content="Import"/>
                <ComboBoxItem Content="Calculate Mikk TSpace"/>
            </ComboBox>
        </DockPanel>
        <DockPanel VerticalAlignment="Center">
            <TextBlock Text="Smoothing Angle" Width="150"/>
            <Slider Minimum="0"
                    Maximum="180"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Interval="1"
                    IsSnapToTickEnabled="True"
                    x:Name="SldAngle"
                    Value="{Binding SmoothingAngle}"
                    d:Value="65"/>
        </DockPanel>
        <DockPanel Margin="0,2"
                   LastChildFill="False"
                   VerticalAlignment="Center">
            <TextBlock Text="Import Embedded Textures"
                       Width="150"/>
            <CheckBox IsChecked="{Binding ImportEmbeddedTextures}"
                      Margin="-1,0,0,0"
                      d:IsChecked="True"/>
        </DockPanel>
        <DockPanel Margin="0,2"
                   LastChildFill="False"
                   VerticalAlignment="Center">
            <TextBlock Text="Import Animation"
                       Width="150"/>
            <CheckBox IsChecked="{Binding ImportAnimations}"
                      Margin="-1,0,0,0"
                      d:IsChecked="{x:Null}"/>
        </DockPanel>
        <DockPanel Margin="0,2"
                   LastChildFill="False"
                   VerticalAlignment="Center">
            <TextBlock Text="Reverse Handedness"
                       Width="150"/>
            <CheckBox IsChecked="{Binding ReverseHandedness}"
                      Margin="-1,0,0,0"
                      d:IsChecked="{x:Null}"/>
        </DockPanel>
        <DockPanel Margin="0,2"
                   LastChildFill="False"
                   VerticalAlignment="Center">
            <TextBlock Text="Coalesce Meshes"
                       Width="150"/>
            <CheckBox IsChecked="{Binding CoalesceMeshes}"
                      Margin="-1,0,0,0"
                      d:IsChecked="False"/>
        </DockPanel>
    </UniformGrid>
</UserControl>
