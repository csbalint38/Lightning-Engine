<UserControl x:Class="Editor.Content.ImportSettingsConfig.TextureImportSettingsView"  
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
            xmlns:local="clr-namespace:Editor.Content.ImportSettingsConfig"  
            xmlns:content="clr-namespace:Editor.Content"  
            xmlns:converters="clr-namespace:Editor.Utilities.Converters"  
            xmlns:enum="clr-namespace:Editor.Common.Enums"  
            xmlns:sys="clr-namespace:System;assembly=mscorlib"  
            mc:Ignorable="d"  
            d:DataContext="{d:DesignInstance Type={x:Type content:TextureImportSettings}}"  
            d:DesignHeight="450" d:DesignWidth="800">  
   <UserControl.Resources>  
       <converters:TextureDimensionToBoolConverter x:Key="textureDimensionToBoolConverter"/>
       <converters:EnumDescriptionConverter x:Key="enumDescriptionConverter"/>
       <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>
        <Style x:Key="{x:Type TextBlock}"  
              TargetType="{x:Type TextBlock}">  
           <Setter Property="VerticalAlignment"  
                   Value="Center"/>  
       </Style>
       <ObjectDataProvider x:Key="bcFormatEnumDataSource"  
                           MethodName="GetValues"  
                           ObjectType="{x:Type sys:Enum}">  
           <ObjectDataProvider.MethodParameters>  
               <x:Type TypeName="enum:BCFormat"/>  
           </ObjectDataProvider.MethodParameters>  
       </ObjectDataProvider>  
   </UserControl.Resources>  
   <Grid VerticalAlignment="Top">  
       <Grid.ColumnDefinitions>  
           <ColumnDefinition Width="100"/>  
           <ColumnDefinition/>  
       </Grid.ColumnDefinitions>  
       <Grid.RowDefinitions>  
           <RowDefinition MinHeight="28"/>  
           <RowDefinition MinHeight="28"/>  
           <RowDefinition MinHeight="28"/>  
           <RowDefinition MinHeight="28"/>  
           <RowDefinition MinHeight="28"/>  
       </Grid.RowDefinitions>  
       <TextBlock Grid.Row="0"  
                  Grid.Column="0"  
                  Text="Dimension"/>  
       <WrapPanel VerticalAlignment="Center"  
                  Grid.Row="0"  
                  Grid.Column="1"  
                  Margin="0,5"  
                  Orientation="Horizontal">  
           <RadioButton IsChecked="{Binding Dimension, Converter={StaticResource textureDimensionToBoolConverter}, ConverterParameter=0}"  
                        Margin="0,1,20,2"  
                        Content="1D"  
                        GroupName="Dimension"/>  
           <RadioButton IsChecked="{Binding Dimension, Converter={StaticResource textureDimensionToBoolConverter}, ConverterParameter=1}"  
                        Margin="0,1,20,2"  
                        Content="2D"  
                        d:IsChecked="True"  
                        GroupName="Dimension"/>  
           <RadioButton IsChecked="{Binding Dimension, Converter={StaticResource textureDimensionToBoolConverter}, ConverterParameter=2}"  
                        Margin="0,1,20,2"  
                        Content="3D"  
                        GroupName="Dimension"/>  
           <RadioButton IsChecked="{Binding Dimension, Converter={StaticResource textureDimensionToBoolConverter}, ConverterParameter=3}"  
                        Margin="0,1,20,2"  
                        Content="Cubemap"  
                        GroupName="Dimension"/>  
       </WrapPanel>  
       <TextBlock Grid.Row="1"  
                  Grid.Column="0"  
                  Text="Mip Levels"/>  
       <Slider Grid.Row="1"  
               Grid.Column="1"  
               IsMoveToPointEnabled="True"  
               VerticalAlignment="Center"  
               TickFrequency="1"  
               TickPlacement="BottomRight"  
               Minimum="0"  
               MaxHeight="{Binding Source={x:Static content:Texture.MaxMipLevels}}"  
               Value="{Binding MipLevels}"  
               SmallChange="1"/>  
       <TextBlock Grid.Row="2"  
                  Grid.Column="0"  
                  Text="Compress"/>  
       <StackPanel Grid.Row="2"  
                   Grid.Column="1"  
                   Orientation="Horizontal">  
           <CheckBox x:Name="ChBCompress"  
                     VerticalAlignment="Center"  
                     IsChecked="{Binding Compress}"  
                     d:IsChecked="True"/>  
           <StackPanel Orientation="Horizontal">  
               <StackPanel.Style>  
                   <Style TargetType="{x:Type StackPanel}">  
                       <Setter Property="Visibility"  
                               Value="Collapsed"/>  
                       <Style.Triggers>  
                           <MultiDataTrigger>  
                               <MultiDataTrigger.Conditions>  
                                   <Condition Binding="{Binding Compress}"  
                                              Value="True"/>  
                                   <Condition Binding="{Binding FormatIndex}"  
                                              Value="0"/>  
                               </MultiDataTrigger.Conditions>  
                               <Setter Property="Visibility"  
                                       Value="Visible"/>  
                           </MultiDataTrigger>  
                       </Style.Triggers>  
                   </Style>  
               </StackPanel.Style>  
               <TextBlock Margin="30,0,5,0"  
                          Text="Prefer BC7"/>  
               <CheckBox VerticalAlignment="Center"  
                         IsChecked="{Binding PreferBC7}"/>  
           </StackPanel>  
       </StackPanel>  
       <TextBlock Grid.Row="3"  
                  Grid.Column="0"  
                  Text="Output format"/>
       <Grid Grid.Row="3" Grid.Column="1">
           <TextBlock Text="{Binding OutputFormat, Converter={StaticResource enumDescriptionConverter}}"/>
           <ComboBox ItemsSource="{Binding Source={StaticResource bcFormatEnumDataSource}, Converter={StaticResource enumDescriptionConverter}}"
                     x:Name="CBFormat"
                     VerticalAlignment="Center"
                     SelectedIndex="{Binding FormatIndex}"
                     Visibility="{Binding Compress, Converter={StaticResource booleanToVisibilityConverter}}"/>
           
       </Grid>
       <TextBlock Grid.Row="4"  
                  Grid.Column="0"  
                  Text="Alpha Threashold"
                  x:Name="TBAlphaThreshold"
                  d:Visibility="Visible">
           <TextBlock.Style>
               <Style TargetType="{x:Type TextBlock}">
                   <Setter Property="Visibility"
                           Value="Collapsed"/>
                   <Style.Triggers>
                       <MultiDataTrigger>
                           <MultiDataTrigger.Conditions>
                               <Condition Binding="{Binding Compress}"
                                          Value="True"/>
                               <Condition Binding="{Binding FormatIndex}"
                                          Value="1"/>
                           </MultiDataTrigger.Conditions>
                           <Setter Property="Visibility"
                                   Value="Visible"/>
                       </MultiDataTrigger>
                   </Style.Triggers>
               </Style>
           </TextBlock.Style>
       </TextBlock>
       <Slider Grid.Row="4"
               Grid.Column="1"
               Minimum="0"
               Maximum="1"
               Value="{Binding AlphaThreshold}"
               VerticalAlignment="Center"
               LargeChange="0.1"
               Visibility="{Binding Path=Visibility, ElementName=TBAlphaThreshold}"
               d:Visibility="Visible"/>
    </Grid>  
</UserControl>
