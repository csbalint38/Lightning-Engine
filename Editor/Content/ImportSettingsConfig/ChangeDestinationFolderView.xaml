<UserControl x:Class="Editor.Content.ImportSettingsConfig.ChangeDestinationFolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Content.ImportSettingsConfig"
             xmlns:converters="clr-namespace:Editor.Utilities.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type local:AssetProxy}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ContentSubfolderConverter x:Key="contentSubfolderConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding FileInfo.Name, StringFormat='Destination folder for {0}:'}"
                   Foreground="{StaticResource Editor.FontBrush}"
                   TextTrimming="CharacterEllipsis"
                   d:Text="placeholder"
                   Margin="0,0,0,5"/>
        <Border BorderThickness="1"
                CornerRadius="3"
                Grid.Row="1"
                BorderBrush="{StaticResource Editor.FontBrush}">
            <DockPanel Margin="5">
                <Button Content="Browse..."
                        DockPanel.Dock="Right"
                        Style="{StaticResource FlatButton}"
                        Click="Button_Click"/>
                <TextBlock Text="{Binding DestinationFolder, Converter={StaticResource contentSubfolderConverter}}"
                           Foreground="{StaticResource Editor.FontBrush}"
                           TextTrimming="CharacterEllipsis"
                           d:Text="/Models/TreeModels"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
