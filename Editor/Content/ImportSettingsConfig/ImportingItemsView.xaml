<UserControl x:Class="Editor.Content.ImportSettingsConfig.ImportingItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Content.ImportSettingsConfig"
             xmlns:enums="clr-namespace:Editor.Common.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{StaticResource Editor.BackgroundBrush3}">
            <ItemsControl ItemsSource="{Binding Source={x:Static local:ImportingItemCollection.FilteredItems}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ImportingItem}">
                        <Grid Margin="1"
                              x:Name="GrdItem"
                              ClipToBounds="True"
                              Background="{StaticResource Editor.BackgroundBrush4}">
                            <Rectangle Height="5"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"
                                       Margin="96,0,0,0"
                                       x:Name="RectStatus"
                                       d:Fill="{StaticResource Editor.GreenBrush}"/>
                            <TextBlock FontFamily="Bahnschrift"
                                       FontSize="10"
                                       Foreground="#20ffffff"
                                       x:Name="TBAssetType"
                                       Margin="0,0,5,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       d:Text="TEXTURE">
                                <TextBlock.LayoutTransform>
                                    <ScaleTransform ScaleX="1.62"
                                                    ScaleY="1"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                            <StackPanel Margin="5,5,5,2">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="{StaticResource Editor.FontBrush}"
                                           TextWrapping="Wrap"
                                           d:Text="DiffuseTexture.png"/>
                                <TextBlock Text="{Binding ImportDuration}"
                                           Foreground="{StaticResource Editor.FontBrush}"
                                           d:Text="00:20:18"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="TBStatus"
                                               Width="85"
                                               d:Text="Done."/>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel.Style>
                                            <Style TargetType="{x:Type StackPanel}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ProgressMax}"
                                                                 Value="0">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="{Binding ProgressValue}"
                                                   Foreground="{StaticResource Editor.FontBrush}"
                                                   Margin="10,0,0,0"
                                                   d:Text="9"/>
                                        <TextBlock Text="{Binding ProgressMax, StringFormat= /{0}}"
                                                   Foreground="{StaticResource Editor.FontBrush}"
                                                   d:Text="/10"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Foreground"
                                        TargetName="TBAssetType"
                                        Value="{StaticResource Editor.LightningBrush}"/>
                                <Setter Property="Background"
                                        TargetName="GrdItem"
                                        Value="{StaticResource Editor.BackgroundBrush5}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Status}"
                                         Value="{x:Static enums:ImportStatus.IMPORTING}">
                                <Setter Property="Text"
                                        TargetName="TBStatus"
                                        Value="Importing..."/>
                                <Setter Property="Foreground"
                                        TargetName="TBStatus"
                                        Value="{StaticResource Editor.LightningBrush}"/>
                                <Setter Property="Fill"
                                        TargetName="RectStatus"
                                        Value="{StaticResource Editor.LightningBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}"
                                         Value="{x:Static enums:ImportStatus.SUCCEEDED}">
                                <Setter Property="Text"
                                        TargetName="TBStatus"
                                        Value="Done."/>
                                <Setter Property="Foreground"
                                        TargetName="TBStatus"
                                        Value="{StaticResource Editor.GreenBrush}"/>
                                <Setter Property="Fill"
                                        TargetName="RectStatus"
                                        Value="{StaticResource Editor.GreenBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}"
                                         Value="{x:Static enums:ImportStatus.FAILED}">
                                <Setter Property="Text"
                                        TargetName="TBStatus"
                                        Value="Importing..."/>
                                <Setter Property="Foreground"
                                        TargetName="TBStatus"
                                        Value="{StaticResource Editor.LightningBrush}"/>
                                <Setter Property="Fill"
                                        TargetName="RectStatus"
                                        Value="{StaticResource Editor.RedBrush}"/>
                                <Setter Property="Background"
                                        TargetName="GrdItem">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource Editor.Red}"
                                                         Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Asset.Type}"
                                         Value="{x:Static enums:AssetType.ANIMATION}">
                                <Setter Property="Text"
                                        TargetName="TBAssetType"
                                        Value="ANIMATION"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Asset.Type}"
                                         Value="{x:Static enums:AssetType.AUDIO}">
                                <Setter Property="Text"
                                        TargetName="TBAssetType"
                                        Value="AUDIO"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Asset.Type}"
                                         Value="{x:Static enums:AssetType.MATERIAL}">
                                <Setter Property="Text"
                                        TargetName="TBAssetType"
                                        Value="MATERIAL"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Asset.Type}"
                                         Value="{x:Static enums:AssetType.MESH}">
                                <Setter Property="Text"
                                        TargetName="TBAssetType"
                                        Value="MESH"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Asset.Type}"
                                         Value="{x:Static enums:AssetType.SKELETON}">
                                <Setter Property="Text"
                                        TargetName="TBAssetType"
                                        Value="SKELETON"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Asset.Type}"
                                         Value="{x:Static enums:AssetType.TEXTURE}">
                                <Setter Property="Text"
                                        TargetName="TBAssetType"
                                        Value="TEXTURE"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <ScrollViewer.Effect>
            <DropShadowEffect Opacity="0.6"
                              BlurRadius="15"
                              ShadowDepth="2"/>
        </ScrollViewer.Effect>
    </ScrollViewer>
</UserControl>
