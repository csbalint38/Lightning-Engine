<Window x:Class="Editor.Content.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.Content"
        mc:Ignorable="d"
        Foreground="{StaticResource Editor.FontBrush}"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource LightningWindowStyle}"
        Title="SaveDialog"
        Height="600"
        Width="800"
        MinWidth="600"
        MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:ContentBrowserView x:Name="contentBrowserView"
                                  SelectionMode="Single"
                                  FileAccess="Write"
                                  MouseDoubleClick="ContentBrowserView_MouseDoubleClick"/>
        <Border Grid.Row="1"
                Background="{StaticResource Editor.BackgroundBrush3}">
            <StackPanel>
                <DockPanel Margin="10">
                    <TextBlock Text="File name:"
                               Style="{StaticResource LightTextBlockStyle}"/>
                    <TextBox x:Name="TBFileName"
                             Text="{Binding Path=SelectedItem.FileName, ElementName=contentBrowserView, Mode=OneWay}"
                             Margin="5,0,0,0"/>
                </DockPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="10,0,11,10">
                    <Button Content="Cancel"
                            Width="96"
                            Height="24"
                            Style="{StaticResource RoundedFlatButton}"
                            IsCancel="True"/>
                    <Button Content="Save"
                            Width="96"
                            Height="24"
                            IsDefault="True"
                                                        Margin="32,0,0,0"
                            Style="{StaticResource RoundedFlatButton}"
                            Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
