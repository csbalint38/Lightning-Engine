<UserControl x:Class="Editor.Content.ContentBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Content"
             xmlns:cb="clr-namespace:Editor.Content.ContentBrowser"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=cb:ContentBrowser}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="SmallIconStyle"
               TargetType="{x:Type Image}">
            <Setter Property="Source"
                    Value="{Binding IconSmall}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDirectory}"
                             Value="True">
                    <Setter Property="Source"
                            Value="pack://application:,,,/Resources/FolderSmall.png"/>
                    
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LargeIconStyle"
               TargetType="{x:Type Image}">
            <Setter Property="Source"
                    Value="{Binding IconLarge}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDirectory}"
                             Value="True">
                    <Setter Property="Source"
                            Value="pack://application:,,,/Resources/FolderBig.png"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type ListViewItem}">
            <EventSetter Event="MouseDoubleClick"
                         Handler="LVFolders_MouseDoubleClick"/>
            <EventSetter Event="KeyDown"
                         Handler="LVFolders_KeyDown"/>
        </Style>
        <GridView x:Key="gridView">
            <GridViewColumn>
                <GridViewColumn.Header>
                    <GridViewColumnHeader Tag="FileName"
                                          Content="Name"/>
                </GridViewColumn.Header>
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Image Style="{StaticResource SmallIconStyle}"
                                   Width="18"
                                   Margin="5,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding FileName}"
                                       Margin="5,2,0,2"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                        </DockPanel>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>
            <GridViewColumn>
                <GridViewColumn.Header>
                    <GridViewColumnHeader Tag="DateModified"
                                          Content="Date modified"/>
                </GridViewColumn.Header>
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DateModified, StringFormat=dd-MMM-yy HH:mm:ss}"
                                   Margin="5,2,0,2"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Size}">
                <GridViewColumn.Header>
                    <GridViewColumnHeader Tag="Size"
                                          Content="Size"/>
                </GridViewColumn.Header>
            </GridViewColumn>
        </GridView>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding FolderContent}"
                  Grid.Row="1"
                  x:Name="LVFolders"
                  IsTextSearchEnabled="True"
                  TextSearch.TextPath="FileName">
            <ListView.Style>
                <Style TargetType="{x:Type ListView}">
                    <Setter Property="Background"
                            Value="Fuchsia"/>
                    <Setter Property="ListBox.BorderThickness"
                            Value="0"/>
                    <Setter Property="View"
                            Value="{StaticResource gridView}"/>
                    <Setter Property="AllowDrop"
                            Value="{Binding Path=AllowImport, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ContentBrowserView}}}" />
                    <EventSetter Event="DragEnter"
                                 Handler="ListView_DragEnter"/>
                </Style>
            </ListView.Style>
        </ListView>
        <Border Visibility="Collapsed"
                d:Visibility="Visible"
                Background="DarkMagenta"
                x:Name="BDrop"
                AllowDrop="{Binding Path=AllowDrop, ElementName=LVFolders}"
                Grid.Row="1"
                DragLeave="BDrop_DragLeave"
                Drop="BDrop_Drop">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border x:Name="filesDrop"
                            Background="Blue"
                            Grid.Row="0"/>
                    <Border x:Name="cfgDrop"
                            Background="Green"
                            Grid.Row="1"/>
                </Grid>
                <Border BorderBrush="#FFC800"
                        BorderThickness="2"
                        CornerRadius="50"
                        Background="#66000000"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        IsHitTestVisible="False">
                    <Border Background="#CC000000"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            CornerRadius="20"
                            BorderBrush="#FFC800"
                            BorderThickness="2">
                        <StackPanel>
                            <Border CornerRadius="16,16,0,0"
                                    HorizontalAlignment="Center"
                                    Width="250"
                                    x:Name="BFile"
                                    Background="Transparent">
                                <TextBlock x:Name="TbFile"
                                           Text="Import Individual Files"
                                           FontFamily="Bahnschrift condensed"
                                           FontSize="24"
                                           Foreground="#FFC800"
                                           Margin="20"
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border CornerRadius="0,0,16,16"
                                    HorizontalAlignment="Center"
                                    Width="250"
                                    x:Name="BCfg"
                                    Background="Transparent">
                                <TextBlock x:Name="TbCfg"
                                           Text="Configure Import Settings"
                                           FontFamily="Bahnschrift condensed"
                                           FontSize="24"
                                           Foreground="#FFC800"
                                           Margin="20"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>
            <Border.Triggers>
                <EventTrigger RoutedEvent="DragEnter"
                              SourceName="filesDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BFiles"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Transparent"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BFiles"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0"
                                             To="0.6"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbFiles"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="White"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DragLeave"
                              SourceName="filesDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BFiles"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Red"
                                            To="Transparent"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BFiles"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0.6"
                                             To="0"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbFiles"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="Red"
                                            To="Wheat"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DragEnter"
                              SourceName="cfgDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BCfg"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Transparent"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BCfg"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0"
                                             To="0.6"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbCfg"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="White"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DragLeave"
                              SourceName="cfgDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BCfg"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Red"
                                            To="Transparent"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BCfg"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0.6"
                                             To="0"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbCfg"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="Red"
                                            To="Wheat"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>
        <Border VerticalAlignment="Top">
            <TextBlock Text="PLACEHOLDER TEXT !!!" />
        </Border>
    </Grid>
</UserControl>
