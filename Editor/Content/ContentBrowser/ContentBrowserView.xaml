<UserControl x:Class="Editor.Content.ContentBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.Content"
             xmlns:cb="clr-namespace:Editor.Content.ContentBrowser"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=cb:ContentBrowser}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="SmallIconStyle"
               TargetType="{x:Type Image}">
            <Setter Property="Source"
                    Value="{Binding IconSmall}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDirectory}"
                             Value="True">
                    <Setter Property="Source"
                            Value="pack://application:,,,/Resources/FolderSmall.png"/>
                    
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LargeIconStyle"
               TargetType="{x:Type Image}">
            <Setter Property="Source"
                    Value="{Binding IconLarge}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDirectory}"
                             Value="True">
                    <Setter Property="Source"
                            Value="pack://application:,,,/Resources/FolderBig.png"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <GridView x:Key="gridView">
            <GridViewColumn>
                <GridViewColumn.Header>
                    <GridViewColumnHeader Tag="FileName"
                                          Content="Name"/>
                </GridViewColumn.Header>
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Image Style="{StaticResource SmallIconStyle}"
                                   Width="18"
                                   Margin="5,0"
                                   VerticalAlignment="Center"/>
                            <Grid VerticalAlignment="Center"
                                  HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding FileName}"
                                       Margin="5,2,0,2"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                                <TextBox Margin="0, -2"
                                         HorizontalAlignment="Stretch"
                                         Padding="2,0,0,0"
                                         Tag="{Binding RenameCommand}"
                                         Text="{Binding FileName, UpdateSourceTrigger=Explicit, Mode=OneWay}"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </DockPanel>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>
            <GridViewColumn>
                <GridViewColumn.Header>
                    <GridViewColumnHeader Tag="DateModified"
                                          Content="Date modified"/>
                </GridViewColumn.Header>
                <GridViewColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DateModified, StringFormat=dd-MMM-yy HH:mm:ss}"
                                   Margin="5,2,0,2"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                    </DataTemplate>
                </GridViewColumn.CellTemplate>
            </GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Size}">
                <GridViewColumn.Header>
                    <GridViewColumnHeader Tag="Size"
                                          Content="Size"/>
                </GridViewColumn.Header>
            </GridViewColumn>
        </GridView>
        <ContextMenu x:Key="contextMenu">
            <MenuItem Header="New">
                <MenuItem x:Name="MINewFolder"
                          Header="Folder"
                          Click="MINewFolder_ClickAsync"/>
                <Separator/>
                <MenuItem Header="Texture"/>
                <MenuItem Header="Material"/>
            </MenuItem>
        </ContextMenu>
        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="{StaticResource Editor.FontBrush}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0,0,0,1"/>
            <Setter Property="Padding"
                    Value="5,2,5,2"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0"
                                SnapsToDevicePixels="true">
                            <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource Editor.Select}"
                                                         Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="true">
                                <Setter Property="Background"
                                        Value="{StaticResource Editor.SelectBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected"
                                           Value="true"/>
                                    <Condition Property="Selector.IsSelectionActive"
                                           Value="false"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background"
                                        Value="{StaticResource Editor.DisabledFontBrush}"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected"
                                               Value="true"/>
                                    <Condition Property="IsMouseOver"
                                               Value="true"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource Editor.Select}"
                                                         Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="MouseDoubleClick"
                         Handler="ListViewItem_MouseDoubleClick"/>
            <EventSetter Event="KeyDown"
                         Handler="ListViewItem_KeyDown"/>
        </Style>
        <Style x:Key="GridViewColumnHeaderGripper"
               TargetType="{x:Type Thumb}">
            <Setter Property="Canvas.Right"
                    Value="-9"/>
            <Setter Property="Width"
                    Value="18"/>
            <Setter Property="Height"
                    Value="{Binding Path=ActualHeight, RelativeSource={RelativeSource TemplatedParent}}"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Background"
                    Value="{StaticResource Editor.BackgroundBrush4}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Padding="{TemplateBinding Padding}"
                                Background="Transparent">
                            <Rectangle HorizontalAlignment="Center"
                                       Width="1"
                                       Fill="{TemplateBinding Background}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="{x:Type GridViewColumnHeader}"
               TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Background"
                    Value="{StaticResource Editor.BackgroundBrush4}"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="2,0"/>
            <Setter Property="Foreground"
                    Value="{StaticResource Editor.FontBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Grid SnapsToDevicePixels="true">
                            <Border Name="HeaderBorder"
                                    BorderThickness="0,1"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <TextBlock x:Name="HeaderContent"
                                           Text="{TemplateBinding Content}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                           TextTrimming="CharacterEllipsis"/>
                            </Border>
                            <Canvas>
                                <Thumb x:Name="PART_HeaderGripper"
                                   Style="{StaticResource GridViewColumnHeaderGripper}"/>
                            </Canvas>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter TargetName="HeaderBorder"
                                        Property="Background"
                                        Value="{StaticResource Editor.BackgroundBrush5}"/>
                                <Setter TargetName="PART_HeaderGripper"
                                        Property="Background"
                                        Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                    Value="true">
                                <Setter TargetName="HeaderBorder"
                                        Property="Background"
                                        Value="{StaticResource Editor.BackgroundBrush5}"/>
                                <Setter TargetName="PART_HeaderGripper"
                                        Property="Visibility"
                                        Value="Hidden"/>
                                <Setter TargetName="HeaderContent"
                                        Property="Margin"
                                        Value="1,1,0,0"/>
                            </Trigger>
                            <Trigger Property="Height"
                                     Value="Auto">
                                <Setter Property="MinHeight"
                                        Value="20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="Click"
                         Handler="GridViewColumnHeader_Click"/>
            <Style.Triggers>
                <Trigger Property="Role"
                         Value="Floating">
                    <Setter Property="Opacity"
                            Value="0.4082"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                <Canvas Name="PART_FloatingHeaderCanvas">
                                    <Rectangle Opacity="0.4697"
                                               Fill="#FF000000"
                                               Width="{TemplateBinding ActualWidth}"
                                               Height="{TemplateBinding ActualHeight}"/>
                                </Canvas>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Role"
                         Value="Padding">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                <Border Name="HeaderBorder"
                                        BorderThickness="0"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}"/>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Height"
                                             Value="Auto">
                                        <Setter Property="MinHeight"
                                                Value="20"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding FolderContent}"
                  Grid.Row="1"
                  x:Name="LVFolders"
                  IsTextSearchEnabled="True"
                  TextSearch.TextPath="FileName"
                  AllowDrop="True">
            <ListView.Style>
                <Style TargetType="{x:Type ListView}">
                    <Setter Property="Background"
                            Value="{StaticResource Editor.BackgroundBrush3}"/>
                    <Setter Property="ListBox.BorderThickness"
                            Value="0"/>
                    <Setter Property="View"
                            Value="{StaticResource gridView}"/>
                    <Setter Property="AllowDrop"
                            Value="{Binding Path=AllowDrop, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ContentBrowserView}}}"/>
                    <EventSetter Event="SelectionChanged"
                                 Handler="ListView_SelectionChanged"/>
                </Style>
            </ListView.Style>
        </ListView>
        <Border Visibility="Collapsed"
                d:Visibility="Collapsed"
                Background="DarkMagenta"
                x:Name="BDrop"
                AllowDrop="{Binding Path=AllowDrop, ElementName=LVFolders}"
                Grid.Row="1"
                DragLeave="BDrop_DragLeave"
                Drop="BDrop_Drop">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border x:Name="filesDrop"
                            Background="Blue"
                            Grid.Row="0"/>
                    <Border x:Name="cfgDrop"
                            Background="Green"
                            Grid.Row="1"/>
                </Grid>
                <Border BorderBrush="#FFC800"
                        BorderThickness="2"
                        CornerRadius="50"
                        Background="#66000000"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        IsHitTestVisible="False">
                    <Border Background="#CC000000"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            CornerRadius="20"
                            BorderBrush="#FFC800"
                            BorderThickness="2">
                        <StackPanel>
                            <Border CornerRadius="16,16,0,0"
                                    HorizontalAlignment="Center"
                                    Width="250"
                                    x:Name="BFile"
                                    Background="Transparent">
                                <TextBlock x:Name="TbFile"
                                           Text="Import Individual Files"
                                           FontFamily="Bahnschrift condensed"
                                           FontSize="24"
                                           Foreground="#FFC800"
                                           Margin="20"
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <Border CornerRadius="0,0,16,16"
                                    HorizontalAlignment="Center"
                                    Width="250"
                                    x:Name="BCfg"
                                    Background="Transparent">
                                <TextBlock x:Name="TbCfg"
                                           Text="Configure Import Settings"
                                           FontFamily="Bahnschrift condensed"
                                           FontSize="24"
                                           Foreground="#FFC800"
                                           Margin="20"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>
            <Border.Triggers>
                <EventTrigger RoutedEvent="DragEnter"
                              SourceName="filesDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BFiles"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Transparent"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BFiles"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0"
                                             To="0.6"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbFiles"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="White"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DragLeave"
                              SourceName="filesDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BFiles"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Red"
                                            To="Transparent"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BFiles"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0.6"
                                             To="0"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbFiles"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="Red"
                                            To="Wheat"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DragEnter"
                              SourceName="cfgDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BCfg"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Transparent"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BCfg"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0"
                                             To="0.6"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbCfg"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="White"
                                            To="Red"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DragLeave"
                              SourceName="cfgDrop">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BCfg"
                                            Storyboard.TargetProperty="Background.Color"
                                            From="Red"
                                            To="Transparent"
                                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="BCfg"
                                             Storyboard.TargetProperty="Background.Opacity"
                                             From="0.6"
                                             To="0"
                                             Duration="0:0:0.2"/>
                            <ColorAnimation Storyboard.TargetName="TbCfg"
                                            Storyboard.TargetProperty="Foreground.Color"
                                            From="Red"
                                            To="Wheat"
                                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>
        <Border VerticalAlignment="Top"
                Background="{StaticResource Editor.BackgroundBrush2}">
            <Border.Effect>
                <DropShadowEffect Opacity="0.3"
                                  BlurRadius="10"
                                  ShadowDepth="0"/>
            </Border.Effect>
            <DockPanel>
                <TextBlock Text="Nope"
                           DockPanel.Dock="Top"
                           Margin="5"
                           Height="32"/>
                <StackPanel Orientation="Horizontal"
                            x:Name="SPPath"
                            Margin="0,0,0,5">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Path}"
                               x:Key="{x:Type Path}">
                            <Setter Property="Margin"
                                    Value="0,3,0,0"/>
                            <Setter Property="Data"
                                    Value="M0,0 L1.5,0 L4.5,3 L1.5,6 L0,6 L3,3 z"/>
                            <Setter Property="Fill"
                                    Value="{StaticResource Editor.FontBrush}"/>
                            <Setter Property="HorizontalAlignment"
                                    Value="Center"/>
                            <Setter Property="VerticalAlignment"
                                    Value="Center"/>
                        </Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="BorderThickness"
                                    Value="0"/>
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="Foreground"
                                    Value="{StaticResource Editor.FontBrush}"/>
                            <Setter Property="FontSize"
                                    Value="12"/>
                            <Setter Property="Focusable"
                                    Value="False"/>
                            <Setter Property="HorizontalAlignment"
                                    Value="Center"/>
                            <Setter Property="VerticalAlignment"
                                    Value="Center"/>
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center"/>
                            <Setter Property="VerticalContentAlignment"
                                    Value="Center"/>
                            <Setter Property="Cursor"
                                    Value="Hand"/>
                            <Setter Property="Margin"
                                    Value="2,1"/>
                            <Setter Property="Padding"
                                    Value="3,1"/>
                            <Setter Property="SnapsToDevicePixels"
                                    Value="True"/>
                            <Setter Property="MinWidth"
                                    Value="48"/>
                            <Setter Property="MaxWidth"
                                    Value="128"/>
                            <Setter Property="Opacity"
                                    Value="0.8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <EventSetter Event="Click"
                                         Handler="OnPathStack_Button_Click"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Opacity"
                                            Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>
                    <Image Source="pack://application:,,,/Resources/FolderSmall.png"
                           Width="18"
                           Margin="5,0,0,2"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
