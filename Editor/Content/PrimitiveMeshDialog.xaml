<Window x:Class="Editor.Content.PrimitiveMeshDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.Content"
        xmlns:common="clr-namespace:Editor.Common.Enums"
        xmlns:util="clr-namespace:Editor.Utilities"
        xmlns:ed="clr-namespace:Editor.Editors"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        Title="Primitive Mesh" Height="600" Width="800">
    <Window.DataContext>
        <ed:GeometryEditor/>
    </Window.DataContext>
    <Window.Resources>
        <util:EnumValueConverter x:Key="enumValueConverter"/>
        <ObjectDataProvider x:Key="dataFromEnum"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="common:PrimitiveMeshType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <DockPanel>
        <Border Height="32"
                DockPanel.Dock="Top"
                VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <ComboBox SelectedIndex="2"
                          Width="100"
                          VerticalAlignment="Center"
                          x:Name="CbPrimitiveType"
                          ItemsSource="{Binding Source={StaticResource dataFromEnum}}"
                          SelectionChanged="CbPrimitiveType_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumValueConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <CheckBox x:Name="CBTexture"
                          Content="Show texture"
                          VerticalAlignment="Center"
                          Margin="5,0"
                          IsChecked="True"
                          Click="CBTexture_Click"/>
            </StackPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100"
                                  MaxWidth="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem, ElementName=CbPrimitiveType}"
                                         Value="{x:Static common:PrimitiveMeshType.PLANE}">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <Grid Margin="0,5">
                    <Border>
                        <StackPanel Margin="5,15,5,15">
                            <DockPanel>
                                <TextBlock Text="Width"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Path=Value, ElementName=SldPlaneX}"
                                         Width="30"
                                         DockPanel.Dock="Right"/>
                                <Slider Minimum="1"
                                        Maximum="10"
                                        HorizontalAlignment="Stretch"
                                        Interval="1"
                                        IsSnapToTickEnabled="True"
                                        TickPlacement="BottomRight"
                                        x:Name="SldPlaneX"
                                        ValueChanged="Slider_ValueChanged"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Length"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Path=Value, ElementName=SldPlaneZ}"
                                         Width="30"
                                         DockPanel.Dock="Right"/>
                                <Slider Minimum="1"
                                        Maximum="10"
                                        HorizontalAlignment="Stretch"
                                        Interval="1"
                                        IsSnapToTickEnabled="True"
                                        TickPlacement="BottomRight"
                                        x:Name="SldPlaneZ"
                                        ValueChanged="Slider_ValueChanged"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Label Content="Segents"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="20,-3,0,0"
                           Padding="5,0"/>
                </Grid>
                <Grid Margin="0,5">
                    <Border>
                        <StackPanel Margin="5,15,5,15">
                            <DockPanel>
                                <TextBlock Text="Width"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="1"
                                         x:Name="TbWidthPlane"
                                         Width="30"
                                         TextChanged="TextBox_TextChanged"
                                         DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Length"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="1"
                                         x:Name="TbLengthPlane"
                                         Width="30"
                                         TextChanged="TextBox_TextChanged"
                                         DockPanel.Dock="Right"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Label Content="Size"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="20,-3,0,0"
                           Padding="5,0"/>
                </Grid>
                <Button Content="Create" Click="Button_Click"/>
            </StackPanel>
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem, ElementName=CbPrimitiveType}"
                                         Value="{x:Static common:PrimitiveMeshType.UV_SPHERE}">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <Grid Margin="0,5">
                    <Border>
                        <StackPanel Margin="5,15,5,15">
                            <DockPanel>
                                <TextBlock Text="Longitude"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Path=Value, ElementName=SldUvSphereX}"
                                         Width="30"
                                         DockPanel.Dock="Right"/>
                                <Slider Minimum="3"
                                        Maximum="64"
                                        Value="32"
                                        HorizontalAlignment="Stretch"
                                        Interval="1"
                                        IsSnapToTickEnabled="True"
                                        TickPlacement="BottomRight"
                                        x:Name="SldUvSphereX"
                                        ValueChanged="Slider_ValueChanged"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Latitude"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Path=Value, ElementName=SldUvSphereY}"
                                         Width="30"
                                         DockPanel.Dock="Right"/>
                                <Slider Minimum="2"
                                        Maximum="64"
                                        Value="16"
                                        HorizontalAlignment="Stretch"
                                        Interval="1"
                                        IsSnapToTickEnabled="True"
                                        TickPlacement="BottomRight"
                                        x:Name="SldUvSphereY"
                                        ValueChanged="Slider_ValueChanged"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Label Content="Segents"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="20,-3,0,0"
                           Padding="5,0"/>
                </Grid>
                <Grid Margin="0,5">
                    <Border>
                        <StackPanel Margin="5,15,5,15">
                            <DockPanel>
                                <TextBlock Text="X"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="1"
                                         x:Name="TbXUvSphere"
                                         Width="30"
                                         TextChanged="TextBox_TextChanged"
                                         DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Y"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="1"
                                         x:Name="TbYUvSphere"
                                         Width="30"
                                         TextChanged="TextBox_TextChanged"
                                         DockPanel.Dock="Right"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Z"
                                           Width="40"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBox Text="1"
                                         x:Name="TbZUvSphere"
                                         Width="30"
                                         TextChanged="TextBox_TextChanged"
                                         DockPanel.Dock="Right"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Label Content="Size"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="20,-3,0,0"
                           Padding="5,0"/>
                </Grid>
                <Grid Margin="0,5">
                    <Border>
                        <DockPanel>
                            <TextBlock Text="Angle"
                                       Width="40"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Path=Value, ElementName=SldSmoothingAngle}"
                                     Width="30"
                                     DockPanel.Dock="Right"/>
                            <Slider Minimum="0"
                                    Maximum="180"
                                    HorizontalAlignment="Stretch"
                                    Interval="1"
                                    IsSnapToTickEnabled="True"
                                    x:Name="SldSmoothingAngle"
                                    ValueChanged="Slider_ValueChanged"/>
                        </DockPanel>
                    </Border>
                    <Label Content="Smoothing angle"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="20,-15,0,0"
                           Padding="5,0"/>
                </Grid>
                <Button Content="Create" Click="Button_Click"/>
            </StackPanel>
            <ed:GeometryView DataContext="{Binding MeshRenderer}"
                             Grid.Column="1"/>
            <StackPanel Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        IsHitTestVisible="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding MeshRenderer.CameraPosition.X, StringFormat=F5}"
                           Foreground="Red"/>
                    <TextBlock Text="{Binding MeshRenderer.CameraPosition.Y, StringFormat=F5}"
                           Margin="10,0"
                           Foreground="Green"/>
                    <TextBlock Text="{Binding MeshRenderer.CameraPosition.Z, StringFormat=F5}"
                           Foreground="Blue"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding MeshRenderer.Meshes[0].Positions.Count}"
                           Foreground="Orange"/>
                    <TextBlock Text="{Binding MeshRenderer.Meshes[0].Indices.Count}"
                           Margin="10,0"
                           Foreground="Orange"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
